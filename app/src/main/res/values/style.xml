    <style name="black18Medium">
        <item name="android:textColor">@color/DarkGray</item>
        <item name="android:textSize">25sp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>
    <style name="grey16Light">
        <item name="android:textColor">#A2A8B5</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/monsera</item>
    </style>
    <style name="yellowBtnStyle" parent="Platform.MaterialComponents">
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/redpink</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="whiteBtnStyle" parent="Platform.MaterialComponents">
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/background</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/background</item>
        <item name="strokeWidth">1dp</item>
    </style>
    <style name="signuptext">
        <item name="android:textColor">@color/redpink</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>
    <style name="GreenSnackbarText">
        <item name="android:textColor">@android:color/holo_green_dark</item>
    </style>

</resources>