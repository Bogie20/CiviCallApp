<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/white" />
        </shape>
    </item>
    <item
        android:top="4dp"
        android:left="4dp"
        android:right="4dp"
        android:bottom="6dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/holo_blue_dark" />
            <stroke
                android:width="1dp"
                android:color="#D1D1D1" />
            <padding
                android:bottom="6dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />
        </shape>
    </item>
</layer-list>