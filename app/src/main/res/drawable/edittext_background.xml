<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with black stroke -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="@color/grey" />
        </shape>
    </item>

    <!-- Add padding for the hint text -->
    <item android:left="18dp" android:right="8dp" android:top="18dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>
