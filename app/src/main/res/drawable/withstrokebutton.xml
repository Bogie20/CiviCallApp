<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- The outermost <item> represents the default state -->
    <item>
        <!-- The outer <layer-list> defines a list of drawable items -->
        <layer-list>
            <!-- The second <item> with bottom and left padding -->
            <item android:bottom="2dp" android:left="2dp">
                <!-- A shape drawable with gradient background, border, and padding -->
                <shape>
                    <gradient android:angle="100"
                        android:endColor="@color/newred"
                        android:startColor="@color/newred" />

                    <corners android:radius="4dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
