<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/grey"
    android:layout_height="match_parent"
    tools:context=".CivicEngagementInfo.Advocacy">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/red"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/arrowBackImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="8dp"
            android:src="@drawable/backjherimy27"
            />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/lexend_bold"
            android:text="Do's and Don'ts"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/relativeLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/love2"
                />

            <androidx.cardview.widget.CardView
                android:backgroundTint="@color/white"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp">


                <TextView
                    android:id="@+id/title"
                    android:fontFamily="@font/lexend_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Civic Engagement and Advocacy: Making Your Voice Heard on Key Issues"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" />
                <TextView

                    android:id="@+id/info"
                    android:fontFamily="@font/lexend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&quot;Ready to turn your passion into powerful action? Dive into 'Civic Engagement and Advocacy: Making Your Voice Heard on Key Issues,' your roadmap to becoming a fearless advocate. Unleash your potential and become a voice for change!&quot;"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />




                <TextView

                    android:id="@+id/info3"
                    android:fontFamily="@font/lexend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.Find Your Cause: Discover the social or political issue that resonates most with you, as genuine passion fuels effective advocacy."
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="230dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />
                <TextView

                    android:id="@+id/info4"
                    android:fontFamily="@font/lexend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.Educate Yourself: Dive deep into research and gather facts to strengthen your arguments and broaden your knowledge."
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="310dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />

                <TextView

                    android:id="@+id/info5"
                    android:fontFamily="@font/lexend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.Craft Your Message: Develop concise, compelling messages to convey your stance and persuade others."
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="390dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />

                <TextView

                    android:id="@+id/info6"
                    android:fontFamily="@font/lexend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.Networking: Build relationships with like-minded individuals and organizations to amplify your impact."
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="450dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />

                <TextView

                    android:id="@+id/info7"
                    android:fontFamily="@font/lexend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.Meet with Officials: Arrange meetings with policymakers to discuss your concerns and propose solutions."
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="510dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />


                <TextView

                    android:id="@+id/info8"
                    android:fontFamily="@font/lexend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6.Leverage Social Media: Utilize social platforms to raise awareness, mobilize support, and connect with a broader audience."
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="570dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />

                <TextView

                    android:id="@+id/info9"
                    android:fontFamily="@font/lexend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7.Collaborate: Team up with others who share your goals, as collective action often achieves more significant results."
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="650dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />
                <TextView

                    android:id="@+id/info10"
                    android:fontFamily="@font/lexend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8.Advocate Locally: Start at the community level, where change can often happen more swiftly and tangibly."
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="710dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />
                <TextView

                    android:id="@+id/info11"
                    android:fontFamily="@font/lexend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9.Nonviolent Protest: Organize or participate in peaceful protests and demonstrations to draw attention to your cause."
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="770dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />
                <TextView

                    android:id="@+id/info12"
                    android:fontFamily="@font/lexend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10.Stay Resilient: Advocacy can be challenging, but persistence is key. Your voice matters, and lasting change is within reach."
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="850dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />














            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>