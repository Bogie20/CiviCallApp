<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUs">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/card"
        app:cardBackgroundColor="@color/redpink"
        app:cardCornerRadius="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginVertical="5dp"
            android:contentDescription="Back to Previous"
            android:src="@drawable/backbtn"
            android:background="@drawable/highlight_text"
            android:clickable="true"
            android:focusable="true"
            android:onClick="BackClick" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oleo_script"
            android:text="About CiviCall App"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingEnd="40dp"
            android:textAllCaps="true"
            android:textSize="20dp" />




    </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:src="@drawable/civicalllogo"
                android:id="@+id/pichasita"
                >

            </ImageView>
        <TextView
            android:id="@+id/civicallsss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:fontFamily="@font/inter_bold"
            android:text="CiviCall App"
            android:textColor="@color/black"
            android:textSize="30dp" />


    <TextView
        android:id="@+id/civicallinfo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:lineSpacingExtra="7dp"
        android:fontFamily="@font/lexend"
        android:text="Civcall App is a powerful community  volunteer app design specifically for  students, providing them with a platform to make a positive impact in their community and beyond."
        android:textColor="@color/background2"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/civicallinfo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:layout_below="@+id/civicallinfo1"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:lineSpacingExtra="7dp"
android:text="Now you can effortlessly discover Nearby Volunteer Opportunities ,Refine result, invite your friends and share contributions with your school."
        android:fontFamily="@font/lexend"
        android:textColor="@color/background2"
        android:textSize="15dp" />

            <ImageView
                android:id="@+id/facebook"
                android:layout_width="60dp"
                android:background="@drawable/highlight_button"
                android:layout_height="40dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/facebook">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact us in Facebook"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:id="@+id/likefacebook"
                android:layout_marginTop="26dp"
                android:layout_marginLeft="20dp">

            </TextView>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:background="@drawable/highlight_button"
                android:src="@drawable/twitterx"
                android:id="@+id/twitter"
                android:layout_marginTop="-91dp"
                android:layout_marginLeft="270dp">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Follow us on X (Twitter)"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:id="@+id/liketwitter"
                android:maxLines="1"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="210dp">

            </TextView>





        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>