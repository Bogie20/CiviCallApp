<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CivicEngagementPost.DetailPost">
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/redpink"
        app:cardCornerRadius="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backbtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginVertical="8dp"
                android:contentDescription="Back to Previous"
                android:src="@drawable/backbtn"
                android:clickable="true"
                android:focusable="true"
                android:onClick="BackClick" />

            <TextView
                android:id="@+id/civicall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/oleo_script"
                android:text="CIVIC ENGAGEMENT DETAILS"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:textSize="20dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp"
        android:id="@+id/scrollview">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">
        <ImageView
            android:id="@+id/detailImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/jherimyimage"
            android:scaleType="fitXY"/>

    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detailTitle"
        android:text="ENVIRONMENTAL CLEAN UP"
       android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:fontFamily="@font/inter_bold"
        android:textSize="24sp"
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        android:textColor="@color/redpink"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/labelPurpose"
                android:text="Purpose:"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/inter_bold"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:textColor="@color/redpink"/>
            <TextView

                android:id="@+id/detailinfo"
                android:fontFamily="@font/lexend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explores the key survival techniques vital for those navigating the unpredictable and often challenging coastal regions of the Philippines. From safe navigation to shelter construction, sustainable resource gathering, water purification, and fostering community cooperation, this comprehensive guide equips individuals with the knowledge needed to thrive in this unique and dynamic environment"
                android:textSize="15sp"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"
                android:gravity="start"
                android:lineSpacingExtra="5dp"
                android:textAlignment="viewStart"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/labelInstruction"
                android:text="Instruction:"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/inter_bold"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:textColor="@color/redpink"/>
            <TextView

                android:id="@+id/detailInstruction"
                android:fontFamily="@font/lexend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explores the key survival techniques vital for those navigating the unpredictable and often challenging coastal regions of the Philippines. From safe navigation to shelter construction, sustainable resource gathering, water purification, and fostering community cooperation, this comprehensive guide equips individuals with the knowledge needed to thrive in this unique and dynamic environment"
                android:textSize="15sp"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"
                android:gravity="start"
                android:lineSpacingExtra="5dp"
                android:textAlignment="viewStart"
                />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:text="Location"
        android:layout_gravity="center"
        android:id="@+id/detailLocation"
        android:textSize="18sp"
        android:textColor="@color/red"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:text="Date and Time"
        android:layout_gravity="center"
        android:id="@+id/detailDateandTime"
        android:textSize="18sp"
        android:textColor="@color/red"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="20dp"
                android:text="campus"
                android:layout_gravity="center"
                android:id="@+id/detailcampus"
                android:textSize="18sp"
                android:textColor="@color/red"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/labelMoredetails"
                android:text="For More Details:"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/inter_bold"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:textColor="@color/redpink"/>
            <TextView
                android:id="@+id/detailDetailName"
                android:fontFamily="@font/lexend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kurt Bryant C. Arpilleda"
                android:textSize="15sp"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"
                android:gravity="start"
                android:lineSpacingExtra="5dp"
                android:textAlignment="viewStart"
                />
            <TextView
                android:id="@+id/detailMoreDetails"
                android:fontFamily="@font/lexend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09267383912"
                android:textSize="15sp"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"
                android:gravity="start"
                android:lineSpacingExtra="5dp"
                android:textAlignment="viewStart"
                />
            <Button
                android:id="@+id/joinButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="70dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="60dp"
                android:fontFamily="@font/inter_bold"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/redpink"
                android:text="Join"
                android:textColor="@color/white"
                android:textSize="25sp">

            </Button>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.github.clans.fab.FloatingActionMenu
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            app:menu_fab_size="normal"
            android:id="@+id/fabicon"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="10dp"
            app:menu_colorPressed="@color/red"
            app:menu_colorNormal="@color/redpink"
            app:menu_icon="@drawable/bullet_proof"
            app:menu_openDirection="up"
            app:menu_showShadow="true">
            <com.github.clans.fab.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editButton"
                android:src="@drawable/edit"
                app:fab_showShadow="true"
                app:fab_colorNormal="@color/blue"
                app:fab_size="mini"/>
            <com.github.clans.fab.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/deleteButton"
                android:src="@drawable/delete"
                app:fab_showShadow="true"
                app:fab_colorNormal="@color/redpink"
                app:fab_size="mini"/>
        </com.github.clans.fab.FloatingActionMenu>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
