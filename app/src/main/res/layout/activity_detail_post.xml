<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CivicEngagementPost.DetailPost">
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/redpink"
        app:cardCornerRadius="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backbtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginVertical="8dp"
                android:contentDescription="Back to Previous"
                android:src="@drawable/backbtn"
                android:clickable="true"
                android:focusable="true"
                android:onClick="BackClick" />

            <TextView
                android:id="@+id/civicall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/oleo_script"
                android:text="CIVIC ENGAGEMENT DETAILS"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:textSize="20dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="0dp"
        android:id="@+id/scrollview">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:backgroundTint="@color/white"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/detailImage"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/placeholder"
                    />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/detailTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/bowlby_one_sc"
                android:gravity="center"
                android:text="ENVIRONMENTAL CLEAN UP"
                android:textAllCaps="true"
                android:textColor="@color/redpink"
                android:textSize="21sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Introduction:"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/inter_bold"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:textColor="@color/redpink"/>
            <TextView

                android:id="@+id/detailIntro"
                android:fontFamily="@font/lexend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Explores the key survival techniques vital for those navigating the unpredictable and often challenging coastal regions of the Philippines."
                android:textSize="15sp"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"
                android:gravity="start"
                android:lineSpacingExtra="6dp"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Objective:"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/inter_bold"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:textColor="@color/redpink"/>
            <TextView

                android:id="@+id/detailDesc"
                android:fontFamily="@font/lexend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Explores the key survival techniques vital for those navigating the unpredictable and often challenging coastal regions of the Philippines. From safe navigation to shelter construction, sustainable resource gathering, water purification, and fostering community cooperation, this comprehensive guide equips individuals with the knowledge needed to thrive in this unique and dynamic environment"
                android:textSize="15sp"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"
                android:gravity="start"
                android:lineSpacingExtra="6dp"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Instruction:"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/inter_bold"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:textColor="@color/redpink"/>
            <TextView

                android:id="@+id/detailInstruction"
                android:fontFamily="@font/lexend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Explores the key survival techniques vital for those navigating the unpredictable and often challenging coastal regions of the Philippines. From safe navigation to shelter construction, sustainable resource gathering, water purification, and fostering community cooperation, this comprehensive guide equips individuals with the knowledge needed to thrive in this unique and dynamic environment"
                android:textSize="15sp"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"
                android:gravity="start"
                android:lineSpacingExtra="6dp"

                />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    android:background="@color/grayback"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/infoAndLocationIcon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/civicalllogo"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/infoText"
                        android:layout_toEndOf="@id/infoAndLocationIcon"
                        android:text="Information:"
                        android:fontFamily="@font/inter_bold"
                        android:textSize="21sp"
                        android:textColor="@color/redpink"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/detailLocation"
                        android:layout_toEndOf="@id/infoAndLocationIcon"
                        android:layout_below="@id/infoText"
                        android:text="Location"
                        android:layout_marginTop="3dp"
                        android:lineSpacingExtra="6dp"
                        android:fontFamily="@font/inter_medium"
                        android:textSize="15sp"
                        android:textColor="@color/DarkGray"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/detailDateandTime"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@id/infoAndLocationIcon"
                        android:layout_below="@id/detailLocation"
                        android:text="DateandTime"
                        android:fontFamily="@font/inter_medium"
                        android:textSize="15sp"
                        android:textColor="@color/DarkGray"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/detailcampus"
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/detailDateandTime"
                        android:text="Campus"
                        android:layout_toEndOf="@id/infoAndLocationIcon"
                        android:fontFamily="@font/inter_medium"
                        android:textSize="15sp"
                        android:textColor="@color/DarkGray"/>

                </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="@color/grayback"
                android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/labelMoredetails"
                android:text="For More Details:"
                android:fontFamily="@font/inter_bold"
                android:textSize="15sp"
                android:textColor="@color/redpink"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/detailFaciName"
                android:fontFamily="@font/lexend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kurt Bryant C. Arpilleda"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"
                android:lineSpacingExtra="5dp"
                android:textAlignment="viewStart" />

            <TextView
                android:id="@+id/detailFaciInfo"
                android:fontFamily="@font/lexend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09267383912"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:lineSpacingExtra="5dp"
                android:textAlignment="viewStart" />
        </LinearLayout>

        <Button
                android:id="@+id/joinButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="50dp"
                 android:layout_marginBottom="50dp"
                android:fontFamily="@font/inter_bold"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/redpink"
                android:text="Join Now"
                android:textColor="@color/white"
                android:textSize="25sp">

            </Button>

        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="115dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.github.clans.fab.FloatingActionMenu
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            app:menu_fab_size="normal"
            android:id="@+id/fabicon"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="10dp"
            app:menu_colorPressed="@color/red"
            app:menu_colorNormal="@color/redpink"
            app:menu_icon="@drawable/bullet_proof"
            app:menu_openDirection="up"
            app:menu_showShadow="true">
            <com.github.clans.fab.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editButton"
                android:src="@drawable/edit"
                app:fab_showShadow="true"
                app:fab_colorNormal="@color/blue"
                app:fab_size="mini"/>
            <com.github.clans.fab.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/deleteButton"
                android:src="@drawable/delete"
                app:fab_showShadow="true"
                app:fab_colorNormal="@color/redpink"
                app:fab_size="mini"/>
        </com.github.clans.fab.FloatingActionMenu>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
