<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    app:cardBackgroundColor="@color/white"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/recImage"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            />
        <TextView
            android:id="@+id/civicTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:gravity="start"
            android:layout_marginEnd="15dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:drawableTint="#FF0000"
            android:drawableEnd="@drawable/verificationfalse_icon"
            android:fontFamily="@font/roboto_medium_italic"
            android:text="ENVIRONMENT CLEANING PROGRAM"
            android:textColor="@color/DarkGray"
            android:textSize="15sp"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/civicLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:gravity="start"
            android:fontFamily="@font/inter_medium"
            android:text="Barangay Santiago Malvar Batangas"
            android:textColor="@color/DarkGray"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/civicDateandTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/inter_medium"
            android:text=" 09-12-2023, 5:30am to 10:00am"
            android:textColor="@color/DarkGray"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/civicCampus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="end"
            android:layout_marginEnd="15dp"
            android:textAllCaps="true"
            android:fontFamily="@font/inter_medium"
            android:text="JPLPC-MALVAR CAMPUS"
            android:textColor="@color/DarkGray"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            />

    </LinearLayout>
</androidx.cardview.widget.CardView>
