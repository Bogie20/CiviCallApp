<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">



    <ProgressBar
        android:id="@+id/Registerprogbar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>



    <androidx.cardview.widget.CardView
        android:layout_width="415dp"
        android:layout_height="100dp"
        android:id="@+id/card"


        app:cardBackgroundColor="@color/red"
        app:cardCornerRadius="4dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Home Icon"
            android:padding="6dp"
            android:src="@drawable/baseline_arrow_circle_left_24"
            android:clickable="true"
            android:focusable="true"
            android:onClick="BackClick" />










        <TextView
            android:id="@+id/civicall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_centerHorizontal="true"
            android:layout_marginLeft="25dp"

            android:fontFamily="@font/inter_bold"
            android:text="sign up"
            android:textColor="@color/white"
            android:textSize="40dp" />




        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp"
        android:textSize="30dp"
        android:textColor="@color/grey"
        android:text="Sign up to CiviCall" />
    <LinearLayout
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">



        <EditText
            android:id="@+id/fname"
            android:layout_width="350dp"
            android:layout_height="54dp"
            android:drawableStart="@drawable/baseline_person_24"
            android:hint="First Name"
            android:layout_marginTop="160dp"
            android:backgroundTint="@color/white"
            android:drawablePadding="5dp"
            android:background="@drawable/button_shape"
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/Lname"
            android:layout_width="350dp"
            android:layout_height="54dp"
            android:drawableStart="@drawable/baseline_person_24"
            android:hint="Last Name"
            android:layout_marginTop="7dp"
            android:backgroundTint="@color/white"
            android:drawablePadding="5dp"
            android:background="@drawable/button_shape"
            android:paddingLeft="20dp" />





        <EditText
            android:id="@+id/Emailline"
            android:layout_width="350dp"
            android:layout_height="54dp"
            android:drawableStart="@drawable/baseline_email_24"
            android:hint="Email"
            android:layout_marginTop="7dp"
            android:backgroundTint="@color/white"
            android:drawablePadding="5dp"
            android:background="@drawable/button_shape"
            android:paddingLeft="20dp" />


        <EditText
            android:id="@+id/Contactline"
            android:layout_width="350dp"
            android:layout_height="54dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/white"
            android:drawableStart="@drawable/baseline_perm_contact_calendar_24"
            android:drawablePadding="5dp"
            android:hint="Contact Number"
            android:paddingLeft="20dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cpass"
                android:layout_width="350dp"
                android:layout_height="54dp"
                android:drawableStart="@drawable/baseline_lock_24"
                android:hint="Create Password"
                android:layout_marginTop="7dp"
                android:backgroundTint="@color/white"
                android:drawablePadding="5dp"
                android:background="@drawable/button_shape"
                android:paddingLeft="20dp"
                android:inputType="textPassword"
                android:ems="10"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/repass"
                android:layout_width="350dp"
                android:layout_height="54dp"
                android:drawableStart="@drawable/baseline_lock_24"
                android:hint="Re-Type Password"
                android:layout_marginTop="7dp"
                android:backgroundTint="@color/white"
                android:drawablePadding="5dp"
                android:background="@drawable/button_shape"
                android:paddingLeft="20dp"
                android:inputType="textPassword"
                android:ems="10"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <Button
        android:id="@+id/Reg"
        android:layout_marginTop="555dp"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:text="Register"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/button_shape">

    </Button>




    <CheckBox
        android:id="@+id/checkedTextView"
        android:layout_marginTop="620dp"
        android:layout_width="350dp"
        android:layout_marginLeft="30dp"
        android:layout_height="50dp"
        android:text="I agree to terms and Conditions as set out by the user management" />








</RelativeLayout>