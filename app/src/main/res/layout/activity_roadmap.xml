<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".CivicEngagementInfo.Roadmap">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/arrowBackImageView"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:padding="8dp"
            android:src="@drawable/baseline_arrow_back_ios_24"
            />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/lexend_bold"
            android:text="Civic Engagement Tips"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/volunteer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/love2"
                    />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:backgroundTint="@color/white"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp">


                <TextView
                    android:id="@+id/title"
                    android:fontFamily="@font/lexend_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 Tips for the students who want \nto participate in Civic Engagement"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" />
                <TextView

                    android:id="@+id/info"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.Educate Yourself: Start by learning about the issues that matter to you. Stay informed about local, national, and global news, and research topics that interest you."
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />

                <TextView

                    android:id="@+id/info2"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.Identify Your Passions: Determine the causes and issues you are most passionate about. Whether it's the environment, education, social justice, or something else, focusing on your interests will help you stay engaged."
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="140dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />

                <TextView

                    android:id="@+id/info3"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.Register to Vote: If you are eligible, register to vote. Voting is a fundamental aspect of civic engagement, and it gives you a voice in the democratic process."
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="220dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />
                <TextView

                    android:id="@+id/info4"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.Attend Meetings and Events: Participate in local government meetings, community events, and town halls to stay informed and connect with like-minded individuals."
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="280dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />
                <TextView

                    android:id="@+id/info5"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.Join Student Organizations: Many colleges and universities have clubs and organizations dedicated to civic engagement and community service. Joining these groups can provide valuable resources and opportunities for involvement."
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="340dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />
                <TextView

                    android:id="@+id/info6"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6.Volunteer: Dedicate your time to volunteer for causes you care about. Whether it's volunteering at a local nonprofit, participating in a community clean-up, or assisting with a food drive, volunteering is a hands-on way to make a difference."
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="430dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />
                <TextView

                    android:id="@+id/info7"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7.Advocate for Change: Write letters, make phone calls, or use social media to express your opinions and advocate for change. Contacting your elected representatives is an effective way to influence policy."
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="520dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />

                <TextView

                    android:id="@+id/info8"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8.Stay Informed: Stay up-to-date on current events and policy changes related to your chosen issues. Follow reputable news sources, read academic articles, and engage in thoughtful discussions."
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="600dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />
                <TextView

                    android:id="@+id/info9"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9.Collaborate with Others: Civic engagement is often most effective when done in collaboration with others. Build coalitions and partnerships with organizations and individuals who share your goals."
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="680dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />
                <TextView

                    android:id="@+id/info10"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10.Run for Office: If you have a strong commitment to public service and leadership skills, consider running for student government or local office. Elected positions provide a direct way to influence policy and make a difference in your community."
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="760dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />





            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>