<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="13.00dp"
    android:background="@drawable/rounded_white_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:ellipsize="end"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:layout_marginTop="13.00dp"
        android:layout_marginStart="15.60dp"
        android:layout_marginEnd="15.60dp"
        android:text="You have been banned"
        android:textColor="@color/redpink"
        android:textSize="23.40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:ellipsize="end"
        android:layout_marginTop="10.40dp"
        android:layout_marginStart="15.60dp"
        android:layout_marginEnd="15.60dp"
        android:text="After reviewing your account, we found that your activity went against our community standards.\n\nFor further inquiries, please email: totalsproductivityapp@gmail.com"
        android:textColor="@color/DarkGray"
        android:textSize="15.60dp" />

    <LinearLayout
        android:id="@+id/okButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="39.00dp"
        android:layout_marginStart="13.00dp"
        android:layout_marginEnd="13.00dp"
        android:layout_marginBottom="13.00dp"
        android:padding="10.40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/border_design">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18.20dp"
            android:text="OK"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="@color/redpink"/>

    </LinearLayout>


</LinearLayout>