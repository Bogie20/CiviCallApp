<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reportproblems">


    <androidx.cardview.widget.CardView
        android:layout_width="415dp"
        android:layout_height="100dp"
        android:id="@+id/card"
        app:cardBackgroundColor="@color/red"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Home Icon"
                android:padding="6dp"
                android:src="@drawable/baseline_arrow_circle_left_24"
                android:clickable="true"
                android:focusable="true"
                android:onClick="BackClick" />

            <TextView
                android:id="@+id/eventcalendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/lexend_semibold"
                android:text="REPORT PROBLEMS"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout

            android:backgroundTint="@color/pinkyata"
            android:id="@+id/fullscreen"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_settings"
            android:orientation="vertical">





            <ImageView
               android:layout_gravity="center"
                android:background="@drawable/jhe"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_below="@+id/cardView"
                android:layout_marginTop="30dp" />

            <TextView
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:fontFamily="@font/lexend_medium"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Hello there, Tell me about the Problems  about the app"/>


        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:id="@+id/password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/general"
            android:background="@drawable/shape_settings"
            android:layout_gravity="center"
            android:orientation="vertical"

            >
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:id="@+id/category"
                android:layout_width="300dp"
                android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/lexend_bold"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:text="Category"
                android:layout_width="300dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>


            <LinearLayout
                android:id="@+id/nototification3"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"

                android:background="@drawable/shape_settings"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lexend_bold"
                        android:text="TECHNICAL ISSUE"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                    <ImageView
                        android:layout_marginLeft="70dp"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:src="@drawable/next_24"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/USER"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"

                android:background="@drawable/shape_settings"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lexend_bold"
                        android:text="USER INTERFACE ISSUE"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                    <ImageView
                        android:layout_marginLeft="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:src="@drawable/next_24"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:id="@+id/OTHER"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"

                android:background="@drawable/shape_settings"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lexend_bold"
                        android:text="OTHERS"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                    <ImageView
                        android:layout_marginLeft="153dp"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:src="@drawable/next_24"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>


    </ScrollView>

</RelativeLayout>