<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context=".ProfileDetails">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/kurt1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:id="@+id/edit"
            android:fontFamily="@font/lexend_bold"
            android:textSize="14sp"
            android:text="Edit Profile"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.865"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oleo_script"
            android:text="My Profile"
            android:textColor="@color/white"

            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/frameLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginVertical="8dp"
            android:contentDescription="Back to Previous"
            android:src="@drawable/backbtn"
            android:clickable="true"
            android:focusable="true"
            android:onClick="BackClick"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.034" />

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <RelativeLayout
                android:id="@+id/editImgLayout"
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImage"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/profilenone"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="NotSibling" />


            </RelativeLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_marginTop="-20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout"
            tools:layout_editor_absoluteX="27dp">

            <TextView
                android:id="@+id/firstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:gravity="center"
                android:text="Jherimy"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/inter_bold"
                android:text="mallorca"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/firstName"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_marginTop="-10dp"
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout"
            app:layout_constraintVertical_bias="1.0"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:id="@+id/email1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_bold"
                android:text="Example@gmail.com"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/totaleng"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="0"
                android:textSize="30sp"
                android:layout_marginLeft="45dp"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/activepts"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_marginLeft="-80dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/totaleng"
                app:layout_constraintTop_toTopOf="@id/totaleng"
                android:text="0.0" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/pending"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_marginRight="-55dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/activepts"
                app:layout_constraintTop_toTopOf="@id/activepts"
                android:text="0" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/totaleng_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_56"
                android:paddingLeft="8dp"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/totaleng"
                android:text="Total Engagement" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/activepts_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active Points"
                android:textSize="15sp"
                android:layout_marginLeft="-80dp"
                android:textColor="@color/white_56"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/totaleng"
                app:layout_constraintTop_toBottomOf="@id/activepts" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/pending_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ongoing Activity"
                android:textSize="15sp"
                android:layout_marginRight="-55dp"
                android:layout_marginEnd="-45dp"
                android:textColor="@color/white_56"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/activepts"
                app:layout_constraintTop_toBottomOf="@id/pending" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/stats_title"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Account Info"
                android:textColor="@color/white_93"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/totaleng" />
    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/stats_title"
        android:paddingHorizontal="1dp">

        <TextView
            android:id="@+id/label4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white_70"
            android:textStyle="bold"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:drawablePadding="15dp"
            android:ellipsize="end"
            android:inputType="text"
            android:lines="1"
            app:cardCornerRadius="10dp"
            android:layout_marginHorizontal="10dp"
            android:maxLines="1"
            android:paddingStart="20dp"
            android:paddingEnd="30dp"
            app:hintTextColor="@color/DarkGray">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!-- Icon -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_house_24"
                    android:layout_gravity="center"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    app:tint="@color/DarkGray" />
                <TextView
                    android:id="@+id/addresstxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:text="Address"
                    android:textColor="@color/DarkGray"
                    android:textSize="16sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/label5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Number:"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white_70"
            android:textStyle="bold"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/mobilenum"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:drawablePadding="15dp"
            android:ellipsize="end"
            android:inputType="text"
            android:layout_marginHorizontal="10dp"
            android:lines="1"
            android:maxLines="1"
            app:cardCornerRadius="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="30dp"
            app:hintTextColor="@color/DarkGray">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/phone_icon"
                    android:layout_gravity="center"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    app:tint="@color/DarkGray" />
                <TextView
                    android:id="@+id/mobilenumtxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:text="09267383648"
                    android:textColor="@color/DarkGray"
                    android:textSize="16sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/label6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Campus:"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white_70"
            android:textStyle="bold"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/campus"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:drawablePadding="15dp"
            android:ellipsize="end"
            android:inputType="text"
            android:lines="1"
            app:cardCornerRadius="10dp"
            android:layout_marginHorizontal="10dp"
            android:maxLines="1"
            android:paddingStart="20dp"
            android:paddingEnd="30dp"
            app:hintTextColor="@color/DarkGray">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/campusblg"
                    android:layout_gravity="center"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    app:tint="@color/DarkGray" />
                <TextView
                    android:id="@+id/campustxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:text="JPLPC MALVAR"
                    android:textColor="@color/DarkGray"
                    android:textSize="16sp" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/label7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Status:"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white_70"
            android:textStyle="bold"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/usertype"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:drawablePadding="15dp"
            android:ellipsize="end"
            android:inputType="text"
            android:lines="1"
            app:cardCornerRadius="10dp"
            android:layout_marginHorizontal="10dp"
            android:maxLines="1"
            android:paddingStart="20dp"
            android:paddingEnd="30dp"
            app:hintTextColor="@color/DarkGray">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/persontype_icon"
                    android:layout_gravity="center"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    app:tint="@color/DarkGray" />
                <TextView
                    android:id="@+id/usertypetxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:text="Student"
                    android:textColor="@color/DarkGray"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of Birth:"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white_70"
                    android:textStyle="bold"
                    />

                <androidx.cardview.widget.CardView
                    android:id="@+id/dateofbirth"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/white"
                    android:drawablePadding="15dp"
                    android:ellipsize="end"
                    android:inputType="text"
                    android:lines="1"
                    app:cardCornerRadius="10dp"
                    android:maxLines="1"
                    android:paddingStart="20dp"
                    android:layout_marginStart="10dp"
                    app:hintTextColor="@color/DarkGray">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/calendar_icon"
                            android:layout_gravity="center"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            app:tint="@color/DarkGray" />
                        <TextView
                            android:id="@+id/dateofbirthtxt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:text="20/03/2002"
                            android:textColor="@color/DarkGray"
                            android:textSize="16sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender:"
                    android:textSize="20sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white_70"
                    android:textStyle="bold"
                    />

                <androidx.cardview.widget.CardView
                    android:id="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/white"
                    android:drawablePadding="15dp"
                    android:ellipsize="end"
                android:layout_marginStart="5dp"
                    android:inputType="text"
                    android:lines="1"
                    app:cardCornerRadius="10dp"
                    android:maxLines="1"
                    android:paddingStart="20dp"
                    android:layout_marginEnd="10dp"
                    app:hintTextColor="@color/DarkGray">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/gendertxt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:text="Male"
                            android:paddingStart="20dp"
                            android:textColor="@color/DarkGray"
                            android:textSize="16sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/label11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No. in Case of Emergency:"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white_70"
            android:textStyle="bold"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/emergencynum"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:drawablePadding="15dp"
            android:ellipsize="end"
            android:inputType="text"
            android:lines="1"
            app:cardCornerRadius="10dp"
            android:maxLines="1"
            android:layout_marginHorizontal="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="30dp"
            app:hintTextColor="@color/DarkGray">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/emergency"
                    android:layout_gravity="center"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    app:tint="@color/DarkGray" />
                <TextView
                    android:id="@+id/emergencynumtxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:text="09267387312"
                    android:textColor="@color/DarkGray"
                    android:textSize="16sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/label12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NSTP Program:"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white_70"
            android:textStyle="bold"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/nstpcard"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:drawablePadding="15dp"
            android:ellipsize="end"
            android:inputType="text"
            android:lines="1"
            app:cardCornerRadius="10dp"
            android:maxLines="1"
            android:layout_marginBottom="50dp"
            android:layout_marginHorizontal="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="30dp"
            app:hintTextColor="@color/DarkGray">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_military_tech_24"
                android:layout_gravity="center"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                app:tint="@color/DarkGray" />
            <TextView
                android:id="@+id/nstpnumtxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:text="09267387312"
                android:textColor="@color/DarkGray"
                android:textSize="16sp" />
        </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>