<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EducationalResources">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:cardBackgroundColor="@color/red"
        app:cardCornerRadius="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/educational"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Home Icon"
                android:padding="6dp"
                android:src="@drawable/baseline_arrow_circle_left_24"
                android:onClick="BackClick" />

            <TextView
                android:id="@+id/civicall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/inter_bold"
                android:text="Information Resources"
                android:textColor="@color/white"
                android:textSize="25sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/information"
                android:layout_width="350dp"
                android:layout_height="180dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/educlogo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
            <Button
                android:id="@+id/reg1"
                android:layout_width="360dp"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/educshape"
                android:text="Disaster Preparedness"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:drawablePadding="-45dp"
                android:paddingStart="25dp"
                android:drawableStart="@drawable/thunder"
                app:layout_constraintTop_toBottomOf="@id/information"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/reg2"
                android:layout_width="360dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/educshape"
                android:text="Emergency Contacts"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:drawablePadding="-55dp"
                android:paddingStart="25dp"
                android:drawableStart="@drawable/emergency"
                app:layout_constraintTop_toBottomOf="@id/reg1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
            <Button
                android:id="@+id/reg3"
                android:layout_width="360dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/educshape"
                android:text="Survival Tips"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:drawablePadding="-140dp"
                android:paddingStart="25dp"
                android:drawableStart="@drawable/survive"
                app:layout_constraintTop_toBottomOf="@id/reg2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
            <Button
                android:id="@+id/reg4"
                android:layout_width="360dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/educshape"
                android:text="Civic Rights and Responsibilities"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:drawablePadding="17dp"
                android:paddingStart="25dp"
                android:drawableStart="@drawable/rights"
                app:layout_constraintTop_toBottomOf="@id/reg3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Button 5 -->
            <Button
                android:id="@+id/reg5"
                android:layout_width="360dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/educshape"
                android:text="Ethics and Civic Leadership"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:paddingStart="25dp"
                android:drawablePadding="-1dp"
                android:drawableStart="@drawable/leadership"
                app:layout_constraintTop_toBottomOf="@id/reg4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Button 6 -->
            <Button
                android:id="@+id/reg6"
                android:layout_width="360dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/educshape"
                android:text="Community Engagement"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:paddingStart="25dp"
                android:drawablePadding="-35dp"
                android:drawableStart="@drawable/groups"
                app:layout_constraintTop_toBottomOf="@id/reg5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Button 7 -->
            <Button
                android:id="@+id/reg7"
                android:layout_width="360dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/educshape"
                android:text="Environmental and Social Issue"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:paddingStart="25dp"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/nature"
                app:layout_constraintTop_toBottomOf="@id/reg6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
            <Button
                android:id="@+id/reg8"
                android:layout_width="360dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/educshape"
                android:text="Digital Citizenship"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:paddingStart="25dp"
                android:drawablePadding="-90dp"
                android:drawableStart="@drawable/mundo"
                android:layout_marginBottom="20dp"
                app:layout_constraintTop_toBottomOf="@id/reg7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>