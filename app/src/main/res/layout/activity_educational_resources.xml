<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EducationalResources">

    <ScrollView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:scrollbars="none">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerHorizontal="true">
    <ImageView
        android:id="@+id/information"
        android:layout_width="350dp"
        android:layout_height="180dp"
        android:layout_marginTop="135dp"

        android:src="@drawable/educlogo" />
    <Button
        android:id="@+id/reg1"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/educshape"
        android:text="Disaster Preparedness"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:drawablePadding="-45dp"
        android:paddingStart="25dp"
        android:drawableStart="@drawable/thunder" />

    <Button
        android:id="@+id/reg2"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/educshape"
        android:text="Emergency Contacts"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:drawablePadding="-55dp"
        android:paddingStart="25dp"
        android:drawableStart="@drawable/emergency"/>

    <Button

        android:id="@+id/reg3"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/educshape"
        android:text="Environmental and Social Issue "
        android:textColor="@color/white"
        android:textSize="16dp"
        android:drawablePadding="17dp"
        android:paddingStart="25dp"
        android:drawableStart="@drawable/nature"/>


    <Button

        android:id="@+id/reg4"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/educshape"
        android:text="Civic Rights and Responsibilities"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:drawablePadding="17dp"
        android:paddingStart="25dp"
        android:drawableStart="@drawable/rights"/>
    <Button
        android:id="@+id/reg5"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/educshape"
        android:text="Ethics and Civic Leadership"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:paddingStart="25dp"
        android:drawablePadding="-1dp"
        android:drawableStart="@drawable/leadership"/>
        <Button

            android:id="@+id/reg6"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/educshape"
            android:text="Community Engagement"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:paddingStart="25dp"
            android:drawablePadding="-35dp"
            android:drawableStart="@drawable/groups"/>
        <Button

            android:id="@+id/reg7"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/educshape"
            android:text="Public Policy and Advocacy"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:paddingStart="25dp"
            android:drawablePadding="3dp"
            android:drawableStart="@drawable/policy"/>
        <Button
            android:id="@+id/reg8"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/educshape"
            android:text="Digital Citizenship"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:paddingStart="25dp"
            android:drawablePadding="-90dp"
            android:drawableStart="@drawable/mundo"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
    </ScrollView>
        <androidx.cardview.widget.CardView
            android:layout_width="415dp"
            android:layout_height="100dp"
            android:id="@+id/card"
            app:cardBackgroundColor="@color/red"
            app:cardCornerRadius="4dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">



            <ImageView
                android:id="@+id/educational"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Home Icon"
                android:padding="6dp"
                android:src="@drawable/baseline_arrow_circle_left_24"
                android:clickable="true"
                android:focusable="true"
                android:onClick="BackClick" />

            <TextView
                android:id="@+id/civicall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/inter_bold"
                android:text="Information Resources"
                android:textColor="@color/white"
                android:textSize="25dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>