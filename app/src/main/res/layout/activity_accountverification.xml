<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Accountverification">




    <androidx.cardview.widget.CardView
        android:layout_width="415dp"
        android:layout_height="100dp"
        android:id="@+id/card"




        app:cardBackgroundColor="@color/red"
        app:cardCornerRadius="4dp">






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">






            <ImageView
                android:id="@+id/back100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Home Icon"
                android:padding="6dp"
                android:src="@drawable/baseline_arrow_circle_left_24"
                android:clickable="true"
                android:focusable="true"
                android:onClick="BackClick" />


            <TextView
                android:id="@+id/civicall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"




                android:layout_centerHorizontal="true"
                android:layout_marginLeft="25dp"


                android:fontFamily="@font/lexend_medium"
                android:text="ACCOUNT VERIFICATION"
                android:textColor="@color/white"
                android:textSize="20dp" />








        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/txt101"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"




        android:layout_centerHorizontal="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/inter_bold"
        android:text="STUDENT \ VERIFICATION"
        android:textColor="@color/black"
        android:textSize="20dp" />


    <me.biubiubiu.justifytext.library.JustifyTextView
        android:id="@+id/txt102"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"




        android:layout_centerHorizontal="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="190dp"
        android:fontFamily="@font/lexend_medium"
        android:text="In order to participate in Civic Engagements programs.The students need to verify their account to be eligible in participating in the said programs. You may submit you student documents Example: COR, Student Id or Certification  of Graduation"








        android:textColor="@color/black"
        android:textSize="20dp" />


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="420dp"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/newred"
        android:orientation="vertical"


        >




        <TextView
            android:id="@+id/txt103"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"


            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lexend_medium"
            android:letterSpacing="0.2"
            android:text="Verification Details  "
            android:textColor="@color/white"
            android:textSize="20dp" />




        <TextView


            android:id="@+id/txt105"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"




            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/lexend_medium"
            android:text="Verification status"
            android:textColor="@color/white"
            android:textSize="15dp" />




        <TextView
            android:id="@+id/selectedFileNameTextView"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/checklinerj"
            android:fontFamily="@font/inter_medium"
            android:gravity="center"
            android:text="Not Yet Verified"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:singleLine="true"
            android:ellipsize="end" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/uploadbutton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="29dp"
                android:layout_margin="20dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/withstrokebutton"
                android:text="Upload "
                android:textAllCaps="false"
                android:textColor="@android:color/white" />


            <Button
                android:id="@+id/buttonremove"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/withstrokebutton"
                android:text="Remove "
                android:textAllCaps="false"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>




