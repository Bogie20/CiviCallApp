<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".CivicEngagementInfo.TacticsImpact">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/arrowBackImageView"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:padding="8dp"
            android:src="@drawable/baseline_arrow_back_ios_24"
            />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/lexend_bold"
            android:text="Civic Engagement Tips"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/relativeLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/love2"
            />

            <androidx.cardview.widget.CardView
                android:backgroundTint="@color/white"
                android:layout_margin="16dp"
                android:id="@+id/cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/lexend_bold"
                android:text="Amplify Your Voice: Civic Engagement Tactics for Impact"
                android:textColor="@color/black"
                android:textSize="16sp" />

                <TextView

                    android:id="@+id/info"
                    android:fontFamily="@font/lexend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To amplify your voice and have a greater impact in civic engagement, you can employ various tactics and strategies. Here are some effective ways to make your voice heard and drive meaningful change"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />

                <TextView

                    android:id="@+id/info2"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. Build a Strong Personal Brand: Establish yourself as a knowledgeable and trustworthy advocate for your cause. Share your expertise through public speaking, writing, and social media."
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="130dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />
                <TextView

                    android:id="@+id/info3"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. Leverage Social Media:Use social media platforms to share information, raise awareness, and connect with a broader audience. Create engaging content, and don't be afraid to use relevant hashtags and tagging influencers and organizations."
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="220dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />
                <TextView

                    android:id="@+id/info4"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.Leverage Social Media:Use social media platforms to share information, raise awareness, and connect with a broader audience. Create engaging content, and don't be afraid to use relevant hashtags and tagging influencers and organizations."
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="320dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />
                <TextView

                    android:id="@+id/info5"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. Use Data and Facts: Back your arguments and advocacy with data, research, and facts. Data-driven arguments are often more persuasive and harder to dismiss."
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="420dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />
                <TextView

                    android:id="@+id/info6"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.Storytelling:Personal stories and anecdotes can make complex issues relatable and emotionally engaging. Share stories that illustrate the impact of the issues you're addressing."
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="490dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />
                <TextView

                    android:id="@+id/info7"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6.Engage in Grassroots Organizing: Mobilize your local community by organizing rallies, protests, and letter-writing campaigns. Grassroots efforts can have a significant influence on local policies."
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="560dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />
                <TextView

                    android:id="@+id/info8"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7.Lobby and Advocate:Meet with elected officials, attend legislative sessions, and participate in advocacy campaigns. Your voice can influence policy decisions."
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="630dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />

                <TextView

                    android:id="@+id/info9"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8.Engage with the Media:Write op-eds, letters to the editor, or press releases to share your perspective in newspapers, magazines, and online publications. Being featured in the media can elevate your message."
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="700dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />

                <TextView

                    android:id="@+id/info10"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9.Host Events and Webinars: Organize events, webinars, or panel discussions to bring together experts and stakeholders to discuss important issues. These events can attract media attention and engage a wider audience."
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="780dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />
                <TextView

                    android:id="@+id/info11"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10.Use Petitions and Online Campaigns:Create online petitions and campaigns to gather support for your cause. Websites like Change.org and social media platforms can help you reach a broad audience."
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="860dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />

                <TextView

                    android:id="@+id/info12"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11.Engage in Civil Disobedience:In some cases, peaceful civil disobedience can draw attention to an issue and create pressure for change. Ensure it's a well-planned, nonviolent action."
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="940dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />

                <TextView

                    android:id="@+id/info13"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12.Stay Informed and Adaptive: Continuously educate yourself about the evolving landscape of your cause and adapt your strategies accordingly. Being well-informed keeps your advocacy relevant and effective."
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="1010dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />

                <TextView

                    android:id="@+id/info14"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13.Monitor and Evaluate Impact: Regularly assess the impact of your efforts. Analyze metrics, gather feedback, and adjust your tactics to maximize your effectiveness."
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="1095dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />

                <TextView

                    android:id="@+id/info15"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14. Mentor and Educate Others: Share your knowledge and experience with others who want to get involved. Mentoring and educating newcomers can create a multiplier effect."
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="1160dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />


                <TextView

                    android:id="@+id/info16"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15. Be Resilient and Patient: Advocacy can be challenging, and progress may be slow. Maintain resilience and patience, and remember that change often takes time."
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="1230dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />
                <TextView

                    android:id="@+id/info17"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16.Network and Attend Conferences:Attend conferences and events related to your cause to connect with experts and influencers in your field. Networking can lead to valuable partnerships and opportunities."
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="1300dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>