<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".Login">



    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:cardBackgroundColor="@color/redpink"
        app:cardCornerRadius="4dp">

        <TextView
            android:id="@+id/civicall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_centerHorizontal="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/inter_bold"
            android:text="Sign in "
            android:textColor="@color/white"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/civicalls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/civicall"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="52dp"
            android:fontFamily="@font/inter_medium"

            android:text="Sign in to your account"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:text="Welcome to CiviCall"
        android:textColor="@color/DarkGray"
        android:textSize="20dp" />


    <ImageView
        android:id="@+id/img"
        android:layout_width="300dp"
        android:layout_height="185dp"
        android:layout_below="@+id/welcome"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="26dp"
        android:src="@drawable/lolo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/img"
        android:layout_marginTop="2dp"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:id="@+id/emailTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:hintTextColor="@color/DarkGray"
            android:layout_marginTop="20dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emailLogin"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawableStart="@drawable/baseline_email_24"
                android:drawablePadding="15dp"
                android:hint="Email"
                android:lines="1"
                android:inputType="text"
                android:ellipsize="end"
                android:singleLine="true"
                android:maxLines="1"
                android:maxLength="128"
                app:hintTextColor="@color/DarkGray"
                android:paddingRight="42dp"
                android:paddingLeft="20dp"
                />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:id="@+id/passwordTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:passwordToggleEnabled="true"
            app:hintTextColor="@color/DarkGray">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordText"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawableStart="@drawable/baseline_lock_24"
                android:drawablePadding="15dp"
                android:hint="Password"
                android:lines="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:maxLines="1"
                android:maxLength="320"
                android:paddingRight="40dp"
                android:inputType="textPassword"
                android:paddingEnd="42dp"
                android:paddingStart="20dp" />
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>
    <Button
        android:id="@+id/btnlogin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/img"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="217dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/btn_red_selector"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="25dp">

    </Button>

    <TextView
        android:id="@+id/forgotpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="290dp"
        android:text="Forgot Password?"
        android:textColor="@color/blue">


    </TextView>

    <TextView
        android:id="@+id/registers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="315dp"
        android:text="----- or Sign in with -----"
        android:textColor="@color/DarkGray"
        android:textSize="18dp">


    </TextView>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/registers"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/google_login"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:layout_marginRight="30dp"
            android:background="@android:color/transparent"
            android:contentDescription="Sign in with Name"
            android:src="@drawable/name"></ImageButton>

        <ImageButton
            android:id="@+id/facebook"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:contentDescription="Sign in with Name"
            android:src="@drawable/fb" />


    </LinearLayout>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="330dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/text_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="95dp"
            android:fontFamily="@font/inter_medium"
            android:text="new user?"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/signUpTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="95dp"
            android:fontFamily="@font/inter_medium"
            android:text="Create an Account"
            android:textColor="@color/blue"
            android:textSize="15dp" />

    </LinearLayout>


</RelativeLayout>





























