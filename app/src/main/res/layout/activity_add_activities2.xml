<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_activities2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:cardBackgroundColor="@color/red"
            app:cardCornerRadius="4dp">
            <ImageView
                android:id="@+id/back1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Home Icon"

                android:padding="6dp"
                android:src="@drawable/menubutton"
                android:clickable="true"
                android:focusable="true"
                android:onClick="BackClick"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/tittlebar"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">


                    <TextView
                        android:id="@+id/civicall"
                        android:layout_marginStart="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/inter_bold"
                        android:text="Add Activities"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        />



                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>



    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:orientation="vertical">

        <View
            android:layout_width="400dp"
            android:layout_height="2dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="10dp"
            android:background="@color/red" />





        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="-20dp"
            android:layout_height="wrap_content"

            android:padding="5dp">



            <EditText

                android:background="@drawable/text_shape1"
                android:inputType="textMultiLine|textCapSentences"
                android:hint="Description"
                android:id="@+id/Description"
                android:lines="6"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/black"
                android:paddingTop="10dp"
                android:gravity="top"
                android:paddingLeft="10dp"/>
        </LinearLayout>









        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="-20dp"
            android:layout_height="wrap_content"
            android:padding="5dp">



            <EditText
                android:background="@drawable/text_shape1"

                android:hint="Guardian's Name"
                android:inputType="text"

                android:id="@+id/guardianname"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:fontFamily="@font/inter_bold"
                android:paddingLeft="10dp"
                android:textColor="@color/newred"


                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:padding="5dp"
            android:layout_marginLeft="-20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >


            <EditText
                android:background="@drawable/text_shape1"

                android:id="@+id/emergency"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/newred"
                android:hint="Emergency Contact no."
                android:inputType="text"
                android:paddingLeft="10dp"



                />
        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Campus"
                android:fontFamily="@font/inter_medium"
                android:drawablePadding="10dp"
                android:textSize="20dp"
                />
            <Spinner
                android:id="@+id/campusSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:autofillHints="Campus"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_editprofile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </LinearLayout>
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nstp"
                android:fontFamily="@font/inter_medium"
                android:drawablePadding="10dp"
                android:textSize="20dp"
                />
            <Spinner
                android:id="@+id/campusSpinner2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_editprofile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </LinearLayout>
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:fontFamily="@font/inter_medium"
                android:drawablePadding="10dp"
                android:textSize="20dp"
                />
            <EditText

                android:id="@+id/birthdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="15dp"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/white"
                android:cursorVisible="false"
                android:drawableEnd="@drawable/calendar"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"

                android:paddingLeft="10dp"
                android:inputType="date"
                />

        </LinearLayout>
        <View
            android:layout_width="410dp"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"

            android:background="@color/red" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="-20dp"
            android:layout_height="wrap_content"

            android:padding="5dp">
            <Button


                android:id="@+id/savebtn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/withstrokebutton"
                android:text="Next"
                android:textAllCaps="false"


                android:textColor="@android:color/white" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>