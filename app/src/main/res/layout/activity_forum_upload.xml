<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Forum.ForumUpload">
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardBackgroundColor="@color/redpink"
        app:cardCornerRadius="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backbtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginVertical="8dp"
                android:contentDescription="Back to Previous"
                android:src="@drawable/backbtn"
                android:background="@drawable/highlight_text"
                android:clickable="true"
                android:focusable="true"
                android:onClick="BackClick" />

            <TextView
                android:id="@+id/civicall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:fontFamily="@font/oleo_script"
                android:text="Provide Opportunity"
                android:textColor="@color/white"
                android:textSize="23dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/postImage"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_margin="24dp"
        android:padding="8dp"
        android:scaleType="center"
        android:src="@drawable/placeholder_image"
        app:layout_constraintBottom_toTopOf="@id/post_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card" />

    <EditText
        android:id="@+id/postText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/comment_background"
        android:drawablePadding="15dp"
        android:ellipsize="end"
        android:hint="Introduction"
        android:layout_marginHorizontal="10dp"
        android:lineSpacingExtra="6dp"
        android:inputType="textMultiLine"
        android:paddingStart="20dp"
        android:paddingEnd="30dp"
        android:paddingTop="20dp"
        android:paddingBottom="100dp"
        app:hintTextColor="@color/DarkGray"
        app:layout_constraintBottom_toTopOf="@id/btnPost"
        app:layout_constraintEnd_toEndOf="@id/postImage"
        app:layout_constraintStart_toStartOf="@id/postImage"
        app:layout_constraintTop_toBottomOf="@id/postImage" />
        <EditText
            android:id="@+id/postTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/comment_background"
            android:drawablePadding="15dp"
            android:ellipsize="end"
            android:hint="8h"
            android:layout_marginHorizontal="10dp"
            android:lineSpacingExtra="6dp"
            android:inputType="textMultiLine"
            android:paddingStart="20dp"
            android:paddingEnd="30dp"
            android:paddingTop="20dp"
            android:paddingBottom="100dp"
            app:hintTextColor="@color/DarkGray"
            app:layout_constraintBottom_toTopOf="@id/btnPost"
            app:layout_constraintEnd_toEndOf="@id/postImage"
            app:layout_constraintStart_toStartOf="@id/postImage"
            app:layout_constraintTop_toBottomOf="@id/postImage" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/categoryTextInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Category"
            app:helperTextTextColor="@color/red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <AutoCompleteTextView
                android:id="@+id/forumCategory"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:editable="false" />
        </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/btnPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:backgroundTint="@color/orange"
        android:paddingStart="80dp"
        android:paddingEnd="80dp"
        android:paddingVertical="13dp"
        android:background="@drawable/btn_red_selector"
        android:text="post"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:fontFamily="@font/inter_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/post_text" />
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
