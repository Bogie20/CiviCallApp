<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".CivicEngagementInfo.Strategies">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/arrowBackImageView"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:padding="8dp"
            android:src="@drawable/baseline_arrow_back_ios_24"
            />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/lexend_bold"
            android:text="Civic Engagement Tips"

            android:textColor="@color/white"
            android:textSize="18dp" />
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/volunteer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/love2"
                    />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:backgroundTint="@color/white"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="330dp"
                android:layout_height="800dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp">


                <TextView
                    android:id="@+id/title"
                    android:fontFamily="@font/lexend_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 Tips Becoming a Civic Leader: Strategies for Meaningful Engagement"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" />
                <TextView

                    android:id="@+id/info"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.Define Your Purpose: Clarify your passion and the specific issues or causes that drive you. Understand why you want to be a civic leader and what change you hope to achieve."
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />

                <TextView

                    android:id="@+id/info2"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.Build Your Knowledge Base: Stay informed about local, national, and global issues. Read widely, attend seminars, and engage with experts to deepen your understanding of the challenges at hand."
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="140dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />

                <TextView

                    android:id="@+id/info3"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.Develop Strong Communication Skills:Effective communication is crucial for a leader. Work on your public speaking, writing, and active listening skills to convey your message clearly and connect with others."
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="220dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />
                <TextView

                    android:id="@+id/info4"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.Collaborate and Network: Build relationships with other leaders, organizations, and community members who share your goals. Collaboration can amplify your impact and bring diverse perspectives to the table."
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="300dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />
                <TextView

                    android:id="@+id/info5"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.Lead by Example:Be a role model by living your values and principles. Demonstrating integrity and ethical behavior is essential for gaining trust and respect."
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="380dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />
                <TextView

                    android:id="@+id/info6"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6.Take Initiative:Don't wait for someone else to lead. Identify opportunities for positive change and take the initiative to address them. Be proactive in seeking solutions."
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="440dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />
                <TextView

                    android:id="@+id/info7"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7.Empower Others:Encourage and support others to become active citizens and leaders. Empowerment creates a ripple effect, increasing the impact of your efforts."
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="500dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />
                <TextView

                    android:id="@+id/info8"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8.Embrace Diversity and Inclusion:Recognize the value of diverse perspectives and inclusivity. Be open to different ideas and experiences, and ensure your leadership efforts are accessible to all."
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="560dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />

                <TextView

                    android:id="@+id/info10"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9.Be Adaptable and Resilient: Leadership often involves facing challenges and setbacks. Develop resilience and the ability to adapt to changing circumstances while staying committed to your goals."
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="640dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />
                <TextView

                    android:id="@+id/info11"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10.Continuously Learn and Grow: - Leadership is an ongoing journey. Invest in your personal and professional development by seeking feedback, attending workshops, and learning from both successes and failures."
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="720dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />








            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>