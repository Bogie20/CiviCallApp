<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="610dp"
    android:layout_gravity="bottom"
    android:background="@drawable/splashstart_page">

    <View
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:background="@color/redpink" >
    </View>

    <TextView
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Report the Post"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lexend_bold"/>

    <ImageView
        android:id="@+id/closeIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/highlight_button"
        android:src="@drawable/ic_close_gray_24dp"
        android:layout_alignParentEnd="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@color/lineColor" />
        <LinearLayout
            android:id="@+id/spam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/highlight_linear">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:paddingEnd="10dp"
                android:drawableRight="@drawable/next_24"
                android:fontFamily="@font/lexend"
                android:text="Spam"
                android:textColor="@color/background2"
                android:textSize="21sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/lineColor" />
        <LinearLayout
            android:id="@+id/hateSpeech"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/highlight_linear">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:paddingEnd="10dp"
                android:drawableRight="@drawable/next_24"
                android:fontFamily="@font/lexend"
                android:text="Hate Speech"
                android:textColor="@color/background2"
                android:textSize="21sp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/lineColor" />
        <LinearLayout
            android:id="@+id/falseInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/highlight_linear">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:drawableRight="@drawable/next_24"
                android:fontFamily="@font/lexend"
                android:text="False Information"
                android:paddingEnd="10dp"
                android:textColor="@color/background2"
                android:textSize="21sp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/lineColor" />
        <LinearLayout
            android:id="@+id/harassment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/highlight_linear">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:drawableRight="@drawable/next_24"
                android:fontFamily="@font/lexend"
                android:text="Harassment"
                android:paddingEnd="10dp"
                android:textColor="@color/background2"
                android:textSize="21sp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/lineColor" />
        <LinearLayout
            android:id="@+id/notConnected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/highlight_linear">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:drawableRight="@drawable/next_24"
                android:fontFamily="@font/lexend"
                android:text="Not Relevant"
                android:paddingEnd="10dp"
                android:textColor="@color/background2"
                android:textSize="21sp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/lineColor" />
        <LinearLayout
            android:id="@+id/nudity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/highlight_linear">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:drawableRight="@drawable/next_24"
                android:fontFamily="@font/lexend"
                android:text="Nudity"
                android:paddingEnd="10dp"
                android:textColor="@color/background2"
                android:textSize="21sp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/lineColor" />
        <LinearLayout
            android:id="@+id/violence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/highlight_linear">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:drawableRight="@drawable/next_24"
                android:fontFamily="@font/lexend"
                android:text="Violence"
                android:paddingEnd="10dp"
                android:textColor="@color/background2"
                android:textSize="21sp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/lineColor" />
        <LinearLayout
            android:id="@+id/other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/highlight_linear">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:drawableRight="@drawable/next_24"
                android:fontFamily="@font/lexend"
                android:text="Other"
                android:paddingEnd="10dp"
                android:textColor="@color/background2"
                android:textSize="21sp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/lineColor" />
    </LinearLayout>



</RelativeLayout>
