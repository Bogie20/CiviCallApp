<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_gravity="bottom"
    android:background="@drawable/splashstart_page">


    <View
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:background="@color/redpink" >
    </View>

    <TextView
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Report the Post"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lexend_bold"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60dp">

        <!-- First LinearLayout -->
        <LinearLayout
            android:id="@+id/termsandsupp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/highlight_linear">

            <TextView
                android:id="@+id/terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:paddingEnd="10dp"
                android:drawableRight="@drawable/next_24"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/lexend"
                android:text="Privacy And Policies"
                android:textColor="@color/background2"
                android:textSize="21sp" />

        </LinearLayout>

        <!-- Second LinearLayout -->
        <LinearLayout
            android:id="@+id/profilesett"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/highlight_linear">

            <TextView
                android:id="@+id/title7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:paddingEnd="10dp"
                android:drawableRight="@drawable/next_24"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/lexend"
                android:text="Terms Of Service"
                android:textColor="@color/background2"
                android:textSize="21sp" />

        </LinearLayout>

        <!-- Third LinearLayout -->
        <LinearLayout
            android:id="@+id/forumsett"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/highlight_linear">

            <TextView
                android:id="@+id/title4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:drawableRight="@drawable/next_24"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/lexend"
                android:text="About Us"
                android:paddingEnd="10dp"
                android:textColor="@color/background2"
                android:textSize="21sp" />

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
