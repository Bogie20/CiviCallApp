<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_gravity="center"
    android:gravity="center"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:id="@+id/dialog_layout_emotion"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:gravity="center_vertical"
        android:background="@drawable/background_emotion_error"
        android:padding="20dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_icon_emotion"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:srcCompat="@drawable/smiley_error"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_text_emotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/img_icon_emotion"
            android:layout_toRightOf="@id/img_icon_emotion">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dialog_title_emotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Failed!"
                android:textSize="24sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:textColor="@color/md_white_1000"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dialog_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your message was delivered successfully"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/md_white_1000"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </RelativeLayout>

</androidx.cardview.widget.CardView>