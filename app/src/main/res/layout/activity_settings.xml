<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <androidx.cardview.widget.CardView
        android:layout_width="415dp"
        android:layout_height="100dp"
        android:id="@+id/card"
        app:cardBackgroundColor="@color/red"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Home Icon"
                android:padding="6dp"
                android:src="@drawable/baseline_arrow_circle_left_24"
                android:clickable="true"
                android:focusable="true"
                android:onClick="BackClick" />

            <TextView
                android:id="@+id/eventcalendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/lexend_semibold"
                android:text="SETTINGS AND PRIVACY"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <!-- General Section -->
        <LinearLayout
            android:layout_gravity="center"
            android:id="@+id/general"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/lexend_bold"
                android:text="GENERAL"
                android:textColor="@color/black"
                android:textSize="30sp" />
        </LinearLayout>

        <!-- Change Password Section -->
            <LinearLayout
                android:id="@+id/password"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/general"
                android:background="@drawable/shape_settings"
               android:layout_gravity="center"
                android:orientation="vertical"

                >
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/lexend_bold"
                    android:text="Change Password"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="300dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/pass"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:drawableStart="@drawable/baseline_lock_24"
                        android:hint="Enter New Password"
                        android:layout_marginTop="7dp"

                        android:drawablePadding="5dp"
                        android:background="@drawable/shape_settings"
                        android:paddingLeft="20dp"
                        android:inputType="textPassword"
                        android:ems="10"/>


                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="300dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/pass1"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:drawableStart="@drawable/baseline_lock_24"
                        android:hint="Confirm new Password"
                        android:layout_marginTop="7dp"

                        android:drawablePadding="5dp"
                        android:background="@drawable/shape_settings"
                        android:paddingLeft="20dp"
                        android:inputType="textPassword"
                        android:ems="10"/>


                </com.google.android.material.textfield.TextInputLayout>
                <LinearLayout
                    android:layout_marginBottom="20dp"

                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button

                        android:backgroundTint="@color/blue"
                        android:id="@+id/clear"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/button_shape"
                        android:text="Cancel"
                        android:textAllCaps="false"


                        android:textColor="@android:color/white" />

                    <Button


                        android:id="@+id/buttonadd"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/button_shape"
                        android:text="Save"
                        android:textAllCaps="false"
                        android:textSize="20sp"

                        android:textColor="@android:color/white" />
                </LinearLayout>

        </LinearLayout>

        <!-- Notification Settings Section -->
        <LinearLayout
            android:layout_gravity="center"
            android:id="@+id/notifi"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/password"
            android:background="@drawable/shape_settings"
            android:orientation="vertical">

            <!-- Notification Settings Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend_bold"
                    android:text="Notifications App"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <Switch
                    android:id="@+id/notificationToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="On"
                    android:checked="true"
                    android:fontFamily="@font/lexend_bold"
                    android:layout_marginLeft="60dp"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/nototification1"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/notifi"
        android:background="@drawable/shape_settings"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_bold"
                android:text="Report Problems"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/black"
                android:textSize="20sp" />
            <ImageView
                android:id="@+id/reportProblemsImageView"
                android:layout_marginLeft="90dp"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:src="@drawable/next_24"/>






        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/nototification2"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/nototification1"

        android:orientation="vertical">


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_bold"
                android:text="TERMS AND SUPPORT"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/black"
                android:textSize="20sp" />
    </LinearLayout>







        <LinearLayout
        android:id="@+id/nototification3"
            android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/nototification2"
        android:background="@drawable/shape_settings"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_bold"
                android:text="TERMS AND CONDITIONS"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/black"
                android:textSize="15sp" />
            <ImageView
                android:layout_marginLeft="60dp"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:src="@drawable/next_24"/>
        </LinearLayout>
        </LinearLayout>






    <LinearLayout
        android:id="@+id/nototification4"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/nototification3"
        android:background="@drawable/shape_settings"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_bold"
                android:text="PRIVACY AND POLICY"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/black"
                android:textSize="15sp" />
            <ImageView
                android:layout_marginLeft="90dp"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:src="@drawable/next_24"/>






        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/nototification5"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/nototification4"
        android:background="@drawable/shape_settings"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_bold"
                android:text="EMAIL AND SUPPORT"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/black"
                android:textSize="15sp" />
            <ImageView
                android:layout_marginLeft="90dp"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:src="@drawable/next_24"/>
        </LinearLayout>
    </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>