<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_engagement">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView

            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            app:cardBackgroundColor="@color/red"
            app:cardCornerRadius="4dp">
            <ImageView
                android:id="@+id/back100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_marginTop="10dp"
                android:contentDescription="Home Icon"
                android:focusable="true"
                android:onClick="BackClick"
                android:padding="9dp"
                android:src="@drawable/baseline_arrow_circle_left_24" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/tittlebar"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">


                    <TextView
                        android:id="@+id/civicall"
                        android:layout_marginStart="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/inter_bold"
                        android:text="Add Activities"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        />



                </LinearLayout>
                <LinearLayout

                    android:id="@+id/leonard"

                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
       >
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:orientation="vertical">

        <View
            android:layout_width="400dp"
            android:layout_height="2dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="10dp"
            android:background="@color/red" />

        <LinearLayout
            android:layout_marginLeft="-20dp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          >


            <EditText
                android:id="@+id/Title"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:background="@drawable/text_shape1"
                android:fontFamily="@font/inter_bold"
                android:hint="Title"
                android:inputType="text"
                android:paddingLeft="10dp"

                android:textColor="@color/black"
                android:textSize="15dp"

                />
        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:layout_marginLeft="-20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           >



            <EditText


                android:background="@drawable/text_shape1"

                android:hint="Location"
                android:inputType="text"
                android:id="@+id/Title2"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/black"

                android:paddingLeft="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="-20dp"
            android:layout_height="wrap_content"

            android:padding="5dp">



            <EditText

                android:background="@drawable/text_shape1"
                android:inputType="textMultiLine|textCapSentences"
                android:hint="Introduction"
                android:id="@+id/Title3"
                android:lines="6"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/black"
                android:paddingTop="10dp"
              android:gravity="top"
                android:paddingLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="-20dp"
            android:layout_height="wrap_content"

            android:padding="5dp">
        <Button


            android:id="@+id/button223"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/withstrokebutton"
            android:text="Next"
            android:textAllCaps="false"


            android:textColor="@android:color/white" />
        </LinearLayout>










    </LinearLayout>
    </ScrollView>

</RelativeLayout>