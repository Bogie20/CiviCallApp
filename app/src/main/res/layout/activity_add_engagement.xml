<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_engagement">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView

            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            app:cardBackgroundColor="@color/red"
            app:cardCornerRadius="4dp">
            <ImageView
                android:id="@+id/back100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_marginTop="10dp"
                android:contentDescription="Home Icon"
                android:focusable="true"
                android:onClick="BackClick"
                android:padding="9dp"
                android:src="@drawable/baseline_arrow_circle_left_24" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/tittlebar"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">


                    <TextView
                        android:id="@+id/civicall"
                        android:layout_marginStart="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/inter_bold"
                        android:text="Add Activities"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        />



                </LinearLayout>
                <LinearLayout

                    android:id="@+id/leonard"

                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:orientation="vertical">

        <View
            android:layout_width="400dp"
            android:layout_height="2dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="10dp"
            android:background="@color/red" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/useraddress1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:fontFamily="@font/inter_medium"
                android:text="Lives in:"
                android:textSize="20dp" />


            <TextView
                android:layout_marginTop="20dp"
                android:text="Sample Address"
                android:id="@+id/useraddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:layout_marginLeft="-75dp"
                android:textColor="@color/newred"
                android:layout_marginBottom="1dp"

                android:textSize="15dp"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="20dp"
            android:fontFamily="@font/inter_medium"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:fontFamily="@font/inter_medium"

                android:text="Birthday:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/userbday"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:paddingLeft="10dp"
                android:text=""
                android:textColor="@color/newred"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="Gender:"


                android:textSize="20dp" />

            <TextView
                android:id="@+id/usergender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:paddingLeft="10dp"
                android:text=""

                android:textColor="@color/newred"

                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"

                android:text="Contact No."

                android:textSize="20dp" />

            <TextView
                android:id="@+id/ContactNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:paddingLeft="10dp"
                android:text=""
                android:textColor="@color/newred"


                android:textSize="20dp" />
        </LinearLayout>

        <View
            android:layout_width="400dp"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"

            android:background="@color/red" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:gravity="center"
                android:text="Additional Information"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"

                android:text="Campus:"

                android:textSize="20dp" />

            <TextView
                android:id="@+id/Campus1"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:paddingLeft="10dp"
                android:text=""
                android:textColor="@color/newred"


                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"

                android:text="Emergency No."

                android:textSize="20dp" />

            <TextView
                android:id="@+id/EmergencyContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:paddingLeft="10dp"
                android:text=""
                android:textColor="@color/newred"


                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>