<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_engagement">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView

            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            app:cardBackgroundColor="@color/red"
            app:cardCornerRadius="4dp">
            <ImageView
                android:id="@+id/back100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_marginTop="10dp"
                android:contentDescription="Home Icon"
                android:focusable="true"
                android:onClick="BackClick"
                android:padding="9dp"
                android:src="@drawable/baseline_arrow_circle_left_24" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/tittlebar"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">


                    <TextView
                        android:id="@+id/civicall"
                        android:layout_marginStart="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/inter_bold"
                        android:text="Add Activities"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        />



                </LinearLayout>
                <LinearLayout

                    android:id="@+id/leonard"

                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
       >
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:orientation="vertical">

        <View
            android:layout_width="400dp"
            android:layout_height="2dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="10dp"
            android:background="@color/red" />

        <LinearLayout

            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/useraddress1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:fontFamily="@font/inter_medium"
                android:text="Title of the engagements"
                android:textSize="20dp" />


            <EditText
                android:layout_marginTop="29dp"
                android:layout_marginLeft="-255dp"
                android:id="@+id/Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/newred"
                android:hint="Title"
                android:inputType="text"
                android:paddingLeft="10dp"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="20dp"
            android:fontFamily="@font/inter_medium"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:fontFamily="@font/inter_medium"

                android:text="Community"
                android:textSize="20dp" />

            <EditText
                android:layout_marginTop="29dp"
                android:layout_marginLeft="-120dp"

                android:hint="Sample Community"
                android:inputType="text"
                android:id="@+id/Title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/newred"

                android:paddingLeft="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="Introduction"


                android:textSize="20dp" />

            <EditText
                android:layout_marginTop="29dp"
                android:layout_marginLeft="-120dp"

                android:hint="Intro"
                android:inputType="text"
                android:id="@+id/Title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/newred"

                android:paddingLeft="10dp"/>
        </LinearLayout>



        <View
            android:layout_width="400dp"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"

            android:background="@color/red" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:gravity="center"
                android:text="Additional Information"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"

                android:text="Purpose"

                android:textSize="20dp" />

            <EditText
                android:layout_marginTop="29dp"
                android:layout_marginLeft="-90dp"
                android:id="@+id/Campus1"
                android:hint="Information"
                android:inputType="text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:paddingLeft="10dp"
                android:textColor="@color/newred"


                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"

                android:text="Emergency No."

                android:textSize="20dp" />

            <EditText
                android:hint="Contact no."
                android:inputType="text"
                android:layout_marginTop="29dp"
                android:layout_marginLeft="-158dp"
                android:id="@+id/EmergencyContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:paddingLeft="10dp"
                android:textColor="@color/newred"


                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardian First Name:"
                android:fontFamily="@font/inter_medium"
                android:drawablePadding="10dp"
                android:textSize="20dp"
                />
            <EditText
                android:id="@+id/guardianname1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/newred"
                android:hint="First Name"
                android:inputType="text"
                android:paddingLeft="10dp"

                />
        </LinearLayout>
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardian Last Name:"
                android:fontFamily="@font/inter_medium"
                android:drawablePadding="10dp"
                android:textSize="20dp"
                />
            <EditText

                android:id="@+id/guardianname2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/newred"
                android:hint="Last Name"
                android:inputType="text"
                android:paddingLeft="10dp"

                />
        </LinearLayout>
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Campus"
                android:fontFamily="@font/inter_medium"
                android:drawablePadding="10dp"
                android:textSize="20dp"
                />
            <Spinner
                android:id="@+id/campusSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_editprofile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </LinearLayout>
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nstp"
                android:fontFamily="@font/inter_medium"
                android:drawablePadding="10dp"
                android:textSize="20dp"
                />
            <Spinner
                android:id="@+id/campusSpinner2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_editprofile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </LinearLayout>
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:fontFamily="@font/inter_medium"
                android:drawablePadding="10dp"
                android:textSize="20dp"
                />
            <EditText
                android:drawableStart="@drawable/cake1"
                android:id="@+id/birthdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="15dp"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/white"
                android:cursorVisible="false"
                android:drawableEnd="@drawable/calendar"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="Birthday"
                android:paddingLeft="10dp"
                android:inputType="date"
               />

        </LinearLayout>
    </LinearLayout>
    </ScrollView>

</RelativeLayout>