<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CivicEngagementPost.CivicPostFragment">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingEnd="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:iconifiedByDefault="false"
        app:searchHintIcon="@null"
        app:queryBackground="@null"
        android:backgroundTint="#FAF9F6"
        app:queryHint="Search..."
        android:focusable="false"
        app:searchIcon="@drawable/search_24"
        android:background="@drawable/search_view_background"
        />

    <ImageView

        android:id="@+id/filterIcon"
        android:layout_width="wrap_content"
        android:layout_height="-30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/higlight_button"
        android:clickable="true"
        android:padding="8dp"
        android:src="@drawable/embudo_24" />



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="8dp"
        android:layout_below="@id/search"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <ImageView
        android:id="@+id/noPostsImage"
        android:layout_width="wrap_content"
        android:layout_height="340dp"
        android:layout_below="@id/search"
        android:layout_centerVertical="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/posting"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search" />

    <TextView
        android:id="@+id/noPostsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noPostsImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/lexend_bold"
        android:gravity="center"
        android:layout_marginHorizontal="10dp"
        android:text="Where posts vanish, stories emerge. Your narrative begins here."
        android:textColor="@color/white"
        android:textSize="19sp"
        android:visibility="gone" />

</RelativeLayout>