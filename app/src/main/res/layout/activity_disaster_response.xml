<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisasterResponse">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="415dp"
        android:layout_height="100dp"
        app:cardBackgroundColor="@color/red"
        app:cardCornerRadius="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/educational"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:contentDescription="Home Icon"
                android:focusable="true"
                android:onClick="BackClick"
                android:padding="6dp"
                android:src="@drawable/baseline_arrow_circle_left_24" />

            <TextView
                android:id="@+id/civicall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/inter_bold"
                android:text="Disaster Preparedness"
                android:textColor="@color/white"
                android:textSize="25dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical">

            <!-- ImageView is aligned at the top with 145dp top margin -->
            <ImageView
                android:id="@+id/information"
                android:layout_width="400dp"
                android:layout_height="250dp"
                android:layout_marginTop="145dp"
                android:src="@drawable/disasterpic" />

            <View
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:background="@drawable/button_background"
                android:backgroundTint="@color/newred"
                android:layout_marginTop="45dp" />

            <!-- Rest of the buttons with 20dp top margin and aligned to the start, end, and bottom of the parent -->
            <Button
                android:id="@+id/btn1"
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/educshape"
                android:text="@string/typhoon"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:drawablePadding="40dp"
                android:gravity="start|center_vertical"
                android:paddingStart="15dp"
                android:drawableStart="@drawable/typhoon"
                android:drawableEnd="@drawable/round_arrow_forward_24" />
            <Button
                android:id="@+id/btn2"
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/educshape"
                android:text="@string/earthquake"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:drawablePadding="40dp"
                android:gravity="start|center_vertical"
                android:paddingStart="15dp"
                android:drawableStart="@drawable/earthquake"
                android:paddingEnd="30dp"
                android:drawableEnd="@drawable/round_arrow_forward_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn1" />


            <Button
                android:id="@+id/btn3"
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/educshape"
                android:text="@string/vulcan"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:drawablePadding="37dp"
                android:gravity="start|center_vertical"
                android:paddingStart="15dp"
                android:drawableStart="@drawable/volcano"
                android:paddingEnd="30dp"
                android:drawableEnd="@drawable/round_arrow_forward_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn2" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/educshape"
                android:text="@string/flood"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:drawablePadding="40dp"
                android:gravity="start|center_vertical"
                android:paddingStart="15dp"
                android:drawableStart="@drawable/floods"
                android:paddingEnd="30dp"
                android:drawableEnd="@drawable/round_arrow_forward_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn3" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/educshape"
                android:text="@string/landslide"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:drawablePadding="40dp"
                android:gravity="start|center_vertical"
                android:paddingStart="15dp"
                android:drawableStart="@drawable/landslide"
                android:paddingEnd="30dp"
                android:drawableEnd="@drawable/round_arrow_forward_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn4" />
            <Button
                android:id="@+id/btn6"
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/educshape"
                android:text="@string/tsunami"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:drawablePadding="40dp"
                android:gravity="start|center_vertical"
                android:paddingStart="15dp"
                android:drawableStart="@drawable/tsunami"
                android:paddingEnd="30dp"
                android:drawableEnd="@drawable/round_arrow_forward_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn5" />

            <Button
                android:id="@+id/btn7"
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/educshape"
                android:text="@string/heat"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:drawablePadding="40dp"
                android:gravity="start|center_vertical"
                android:paddingStart="15dp"
                android:drawableStart="@drawable/sun"
                android:paddingEnd="30dp"
                android:drawableEnd="@drawable/round_arrow_forward_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn6" />
            <Button
                android:id="@+id/btn8"
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/educshape"
                android:text="@string/tropicaldisease"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:drawablePadding="33dp"
                android:gravity="start|center_vertical"
                android:paddingStart="15dp"
                android:drawableStart="@drawable/virus"
                android:paddingEnd="30dp"
                android:drawableEnd="@drawable/round_arrow_forward_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn7" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/educshape"
                android:text="@string/terrorism"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:paddingStart="15dp"
                android:drawableStart="@drawable/ribbon"
                android:drawablePadding="35dp"
                android:gravity="start|center_vertical"
                android:paddingEnd="30dp"
                android:drawableEnd="@drawable/round_arrow_forward_24"
                android:layout_marginBottom="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn8" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>