<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisasterResponse">

    <ScrollView
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/information"
                android:layout_width="400dp"
                android:layout_height="250dp"
                android:layout_marginTop="145dp"

                android:src="@drawable/disasterpic" />
            <View
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:background="@drawable/button_background"
                android:backgroundTint="@color/newred"
                android:layout_marginTop="45dp" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/educshape"
                android:text="@string/typhoon"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:drawablePadding="40dp"
                android:paddingEnd="30dp"
                android:gravity="start|center_vertical"
                android:paddingStart="15dp"
                android:drawableStart="@drawable/typhoon"
                android:drawableEnd="@drawable/round_arrow_forward_24" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/educshape"
                android:text="@string/earthquake"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:drawablePadding="40dp"
                android:gravity="start|center_vertical"
                android:paddingStart="15dp"
                android:drawableStart="@drawable/earthquake"
                android:paddingEnd="30dp"
                android:drawableEnd="@drawable/round_arrow_forward_24" />


            <Button

                android:id="@+id/btn3"
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/educshape"
                android:text="@string/vulcan"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:drawablePadding="37dp"
                android:gravity="start|center_vertical"
                android:paddingStart="15dp"
                android:drawableStart="@drawable/volcano"
                android:paddingEnd="30dp"
                android:drawableEnd="@drawable/round_arrow_forward_24" />


            <Button

                android:id="@+id/btn4"
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/educshape"
                android:text="@string/flood"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:drawablePadding="40dp"
                android:gravity="start|center_vertical"
                android:paddingStart="15dp"
                android:drawableStart="@drawable/floods"
                android:paddingEnd="30dp"
                android:drawableEnd="@drawable/round_arrow_forward_24" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/educshape"
                android:text="@string/landslide"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:drawablePadding="40dp"
                android:gravity="start|center_vertical"
                android:paddingStart="15dp"
                android:drawableStart="@drawable/landslide"
                android:paddingEnd="30dp"
                android:drawableEnd="@drawable/round_arrow_forward_24" />

            <Button

                android:id="@+id/btn6"
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/educshape"
                android:text="@string/tsunami"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:drawablePadding="40dp"
                android:gravity="start|center_vertical"
                android:paddingStart="15dp"
                android:drawableStart="@drawable/tsunami"
                android:paddingEnd="30dp"
                android:drawableEnd="@drawable/round_arrow_forward_24" />

            <Button
                android:id="@+id/btn7"
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/educshape"
                android:text="@string/heat"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:drawablePadding="40dp"
                android:gravity="start|center_vertical"
                android:paddingStart="15dp"
                android:drawableStart="@drawable/sun"
                android:paddingEnd="30dp"
                android:drawableEnd="@drawable/round_arrow_forward_24" />
            <Button

                android:id="@+id/btn8"
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/educshape"
                android:text="@string/tropicaldisease"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:drawablePadding="33dp"
                android:gravity="start|center_vertical"
                android:paddingStart="15dp"
                android:drawableStart="@drawable/virus"
                android:paddingEnd="30dp"
                android:drawableEnd="@drawable/round_arrow_forward_24" />
            <Button
                android:id="@+id/btn9"
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/educshape"
                android:text="@string/terrorism"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:paddingStart="15dp"
                android:drawableStart="@drawable/ribbon"
                android:drawablePadding="35dp"
                android:gravity="start|center_vertical"
                android:paddingEnd="30dp"
                android:drawableEnd="@drawable/round_arrow_forward_24"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>
    </ScrollView>
    <androidx.cardview.widget.CardView
        android:layout_width="415dp"
        android:layout_height="100dp"
        android:id="@+id/card"
        app:cardBackgroundColor="@color/red"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">



            <ImageView
                android:id="@+id/educational"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Home Icon"
                android:padding="6dp"
                android:src="@drawable/baseline_arrow_circle_left_24"
                android:clickable="true"
                android:focusable="true"
                android:onClick="BackClick" />

            <TextView
                android:id="@+id/civicall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/inter_bold"
                android:text="Disaster Preparedness"
                android:textColor="@color/white"
                android:textSize="25dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>