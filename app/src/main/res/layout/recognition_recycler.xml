<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <TextView
            android:ellipsize="end"
            android:fontFamily="@font/lexend_medium"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/rankingnum"
            android:text="0"
            android:layout_marginTop="35dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_toEndOf="@id/cardView"
            android:layout_below="@id/nameRec"
            android:layout_marginStart="15dp"
            android:maxLines="1"
            android:layout_marginBottom="12dp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cardCornerRadius="100dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/profilePic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/user" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:orientation="vertical">

            <TextView
                android:ellipsize="end"
                android:maxLines="2"
                android:fontFamily="@font/lexend_bold"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:id="@+id/nameRec"
                android:lineSpacingExtra="2dp"
                android:text="Kurt Bryant Arpilleda"
                android:textColor="@color/DarkGray"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/cardView"/>

            <TextView
                android:id="@+id/activepts"
                android:layout_width="185dp"
                android:layout_height="47dp"
                android:layout_below="@id/nameRec"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="12dp"
                android:layout_toEndOf="@id/cardView"
                android:ellipsize="end"
                android:fontFamily="@font/lexend_medium"
                android:lineSpacingExtra="2dp"
                android:maxLines="2"
                android:text="0"
                android:textColor="@color/background2"
                android:textSize="14sp" />

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/badge_25"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bronzes" />
    </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
