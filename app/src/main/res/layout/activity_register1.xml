<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register1">
    />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/card"
            app:cardBackgroundColor="@color/redpink"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                
                <ImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Home Icon"
                    android:padding="6dp"

                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="BackClick" />
                <TextView
                    android:id="@+id/civicall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="50dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="Sign Up"
                    android:textColor="@color/white"
                    android:textSize="40dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card">

        <LinearLayout
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:paddingHorizontal="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/oleo_script"
                android:text="Sign-Up Now and Be a Part of Change"
                android:textColor="@color/black"
                android:textSize="23dp" />
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:id="@+id/fnameTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="80dp"
                    android:autofillHints="name"
                    app:hintTextColor="@color/DarkGray"
                    android:layout_marginTop="20dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="80"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fname"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:drawableStart="@drawable/baseline_person_24"
                        android:drawablePadding="15dp"
                        android:hint="First Name"
                        android:lines="1"
                        android:inputType="text"
                        app:hintTextColor="@color/DarkGray"
                        android:paddingEnd="30dp"
                        android:paddingStart="20dp"
                        />

                </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:id="@+id/lastNameTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/DarkGray"
                app:counterEnabled="true"
                app:counterMaxLength="80">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Lname"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:drawableStart="@drawable/baseline_person_24"
                    android:drawablePadding="15dp"
                    android:hint="Last Name"
                    android:lines="1"
                    android:inputType="text"
                    app:hintTextColor="@color/DarkGray"
                    android:paddingEnd="30dp"
                    android:paddingStart="20dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:id="@+id/addressTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="50dp"
                app:hintTextColor="@color/DarkGray"
                app:counterEnabled="true"
                app:counterMaxLength="255">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:drawableStart="@drawable/sharelocation"
                    android:drawablePadding="15dp"
                    android:hint="Address"
                    android:lines="1"
                    android:inputType="text"
                    app:hintTextColor="@color/DarkGray"
                    android:paddingEnd="30dp"
                    android:paddingStart="20dp"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:id="@+id/contactNumberTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/DarkGray"
                app:counterEnabled="true"
                app:counterMaxLength="20">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Contactline"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:drawableStart="@drawable/baseline_perm_contact_calendar_24"
                    android:drawablePadding="15dp"
                    android:hint="Mobile Number"
                    android:lines="1"
                    app:hintTextColor="@color/DarkGray"
                    android:paddingEnd="30dp"
                    android:paddingStart="20dp"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:id="@+id/contactEmeNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/DarkGray"
                app:counterEnabled="true"
                app:counterMaxLength="20">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ContactEme"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:drawableStart="@drawable/baseline_perm_contact_calendar_24"
                    android:drawablePadding="15dp"
                    android:lines="1"
                    android:hint="No. In Case of Emergency "
                    app:hintTextColor="@color/DarkGray"
                    android:paddingEnd="30dp"
                    android:paddingStart="20dp"
                   />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/campusTextInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Campus"
                app:helperTextTextColor="@color/red"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <AutoCompleteTextView
                    android:id="@+id/campus"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:editable="false" />
            </com.google.android.material.textfield.TextInputLayout>            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                >

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/birthdateTextInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Date of Birth"
                app:startIconDrawable="@drawable/calendar"
                app:helperTextTextColor="@color/red"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <EditText
                    android:id="@+id/birthdate"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_marginEnd="10dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="none"
                    android:background="@null" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/genderTextInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Gender"
                app:helperTextTextColor="@color/red"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <AutoCompleteTextView
                    android:id="@+id/spinnerSex"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:lines="1"
                    android:editable="false" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:id="@+id/emailTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="50dp"
                app:hintTextColor="@color/DarkGray"
                app:counterEnabled="true"
                app:counterMaxLength="320"
                android:layout_marginTop="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Emailline"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:drawableStart="@drawable/baseline_email_24"
                    android:drawablePadding="15dp"
                    android:hint="Email"
                    android:lines="1"
                    android:inputType="text"
                    app:hintTextColor="@color/DarkGray"
                    android:paddingEnd="30dp"
                    android:paddingStart="20dp"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:id="@+id/passwordTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:hintTextColor="@color/DarkGray"
                app:counterEnabled="true"
                app:counterMaxLength="128">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pass"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:drawableStart="@drawable/baseline_lock_24"
                    android:drawablePadding="15dp"
                    android:hint="Password"
                    android:lines="1"
                    android:inputType="textPassword"
                    android:paddingEnd="40dp"
                    android:paddingStart="20dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:id="@+id/confirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:hintTextColor="@color/DarkGray"
                app:counterEnabled="true"
                app:counterMaxLength="128">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/confirmPass"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:drawableStart="@drawable/baseline_lock_24"
                    android:drawablePadding="15dp"
                    android:lines="1"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:paddingEnd="40dp"
                    android:paddingStart="20dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <CheckBox
                android:id="@+id/checkedTextView"
                android:layout_width="350dp"
                android:layout_marginLeft="10dp"
                android:layout_height="50dp"
                android:layout_marginTop="7dp"
                android:text="@string/agreement" />
            <Button
                android:id="@+id/Reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Register"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/redpink"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="60dp">

            </Button>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
       android:layout_marginBottom="8dp"
    />
    </RelativeLayout>