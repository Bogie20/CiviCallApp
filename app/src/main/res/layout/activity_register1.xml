<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register1">
    />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/card"
            app:cardBackgroundColor="@color/redpink"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backbtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginVertical="8dp"
                    android:contentDescription="Back to Previous"
                    android:src="@drawable/backbtn"
                    android:background="@drawable/highlight_text"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="BackClick" />
                <TextView
                    android:id="@+id/civicall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="40dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="Sign Up"
                    android:textColor="@color/white"
                    android:textSize="40dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card">

        <LinearLayout
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:paddingHorizontal="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/oleo_script"
                android:text="Sign-Up Now and Be a Part of Change"
                android:textColor="@color/black"
                android:textSize="22dp" />
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:id="@+id/fnameTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="80dp"
                    android:autofillHints="name"
                    app:hintTextColor="@color/DarkGray"
                   android:layout_marginVertical="12dp"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fname"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:drawableStart="@drawable/baseline_person_24"
                        android:drawablePadding="15dp"
                        android:hint="First Name"
                        android:lines="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:inputType="text"
                        app:hintTextColor="@color/DarkGray"
                        android:paddingEnd="30dp"
                        android:paddingStart="20dp"
                        />

                </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:id="@+id/MiddleNameTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/DarkGray"
                android:layout_marginVertical="12dp"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Mname"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:drawableStart="@drawable/baseline_person_24"
                    android:drawablePadding="15dp"
                    android:hint="Middle Name"
                    android:lines="1"
                    android:inputType="text"
                    app:hintTextColor="@color/DarkGray"
                    android:paddingEnd="30dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:paddingStart="20dp"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:id="@+id/lastNameTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                app:hintTextColor="@color/DarkGray">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Lname"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:drawableStart="@drawable/baseline_person_24"
                    android:drawablePadding="15dp"
                    android:hint="Last Name"
                    android:lines="1"
                    android:inputType="text"
                    app:hintTextColor="@color/DarkGray"
                    android:paddingEnd="30dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:paddingStart="20dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:id="@+id/addressTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/DarkGray"
                android:layout_marginVertical="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:drawableStart="@drawable/sharelocation"
                    android:drawablePadding="15dp"
                    android:ellipsize="end"
                    android:hint="Address"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingStart="20dp"
                    android:paddingEnd="30dp"
                    android:singleLine="true"
                    app:hintTextColor="@color/DarkGray" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:id="@+id/contactNumberTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/DarkGray"
                app:counterEnabled="true"
                android:layout_marginTop="12dp"
                app:counterMaxLength="11">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Contactline"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:drawableStart="@drawable/baseline_perm_contact_calendar_24"
                    android:drawablePadding="15dp"
                    android:hint="Mobile Number"
                    android:lines="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    app:hintTextColor="@color/DarkGray"
                    android:paddingEnd="30dp"
                    android:paddingStart="20dp"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/campusTextInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Campus"
                app:helperTextTextColor="@color/red"
                android:layout_marginVertical="12dp">
                <AutoCompleteTextView
                    android:id="@+id/campus"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:editable="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/usercateTextInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="User Category"
                app:helperTextTextColor="@color/red"
                android:layout_marginVertical="12dp">
                <AutoCompleteTextView
                    android:id="@+id/usercategory"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:editable="false"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                >

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/birthdateTextInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="200dp"
                android:layout_marginEnd="15dp"
                android:layout_height="wrap_content"
                android:hint="Date of Birth">
                <AutoCompleteTextView
                    android:id="@+id/birthdate"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:lines="1"
                    android:editable="false" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/genderTextInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Gender"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <AutoCompleteTextView
                    android:id="@+id/spinnerSex"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:lines="1"
                    android:editable="false" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:id="@+id/emailTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/DarkGray"
                android:layout_marginVertical="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Emailline"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:drawableStart="@drawable/baseline_email_24"
                    android:drawablePadding="15dp"
                    android:hint="Email"
                    android:lines="1"
                    android:inputType="text"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    app:hintTextColor="@color/DarkGray"
                    android:paddingEnd="30dp"
                    android:paddingStart="20dp"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:id="@+id/passwordTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:hintTextColor="@color/DarkGray"
                android:layout_marginVertical="12dp">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pass"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:drawableStart="@drawable/baseline_lock_24"
                    android:drawablePadding="15dp"
                    android:hint="Password"
                    android:lines="1"
                    android:paddingEnd="30dp"
                    android:inputType="textPassword"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:paddingStart="20dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:id="@+id/confirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:hintTextColor="@color/DarkGray"
                android:layout_marginVertical="12dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/confirmPass"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:drawableStart="@drawable/baseline_lock_24"
                    android:drawablePadding="15dp"
                    android:lines="1"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:paddingEnd="30dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:paddingStart="20dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7dp">

                <CheckBox
                    android:id="@+id/checkedTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="4dp" />

                <TextView
                    android:id="@+id/rightTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I have read and agree to the Terms and Conditions and Privacy Policy "
                    android:layout_gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <Button
                android:id="@+id/Reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="60dp"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/redpink"
                android:fontFamily="@font/inter_bold"
                android:text="Register"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="25sp">

            </Button>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
       android:layout_marginBottom="8dp"
    />
    </RelativeLayout>