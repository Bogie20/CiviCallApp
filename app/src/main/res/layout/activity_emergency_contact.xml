<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmergencyContact">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardBackgroundColor="@color/red"
        app:cardCornerRadius="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/educational"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Home Icon"
                android:padding="6dp"
                android:src="@drawable/baseline_arrow_circle_left_24"
                android:clickable="true"
                android:focusable="true"
                android:onClick="BackClick" />

            <TextView
                android:id="@+id/civicall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/inter_bold"
                android:text="Emergency Contact"
                android:textColor="@color/white"
                android:textSize="27dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/subtitle_small2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search for specific Campus:"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="-120dp"
                android:layout_marginTop="8dp" />

            <androidx.appcompat.widget.SearchView
                android:id="@+id/Searchview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/searchview"
                app:iconifiedByDefault="false"
                app:queryBackground="@android:color/transparent"
                app:layout_constraintEnd_toStartOf="@id/search_button1"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/subtitle_small2"
                app:queryHint="search here.." />


            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/educshape"
                android:text="Balayan"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:drawablePadding="37dp"
                android:gravity="start|center_vertical"
                android:paddingStart="15dp"
                android:drawableStart="@drawable/balayan"
                android:paddingEnd="30dp"
                android:drawableEnd="@drawable/round_arrow_forward_24"
                app:layout_constraintTop_toBottomOf="@id/Searchview"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


            <Button
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/educshape"
                android:text="Lemery"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:paddingStart="15dp"
                android:drawableStart="@drawable/lemery"
                android:drawablePadding="35dp"
                android:gravity="start|center_vertical"
                android:paddingEnd="30dp"
                android:drawableEnd="@drawable/round_arrow_forward_24"
                app:layout_constraintTop_toBottomOf="@id/btn1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/educshape"
                android:text="Lipa City"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:paddingStart="15dp"
                android:drawableStart="@drawable/lipa"
                android:drawablePadding="35dp"
                android:gravity="start|center_vertical"
                android:paddingEnd="30dp"
                android:drawableEnd="@drawable/round_arrow_forward_24"
                app:layout_constraintTop_toBottomOf="@id/btn2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/educshape"
                android:text="Lobo"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:paddingStart="15dp"
                android:drawableStart="@drawable/lobo"
                android:drawablePadding="35dp"
                android:gravity="start|center_vertical"
                android:paddingEnd="30dp"
                android:drawableEnd="@drawable/round_arrow_forward_24"
                app:layout_constraintTop_toBottomOf="@id/btn3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/educshape"
                android:text="Mabini"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:paddingStart="15dp"
                android:drawableStart="@drawable/mabini"
                android:drawablePadding="35dp"
                android:gravity="start|center_vertical"
                android:paddingEnd="30dp"
                android:drawableEnd="@drawable/round_arrow_forward_24"
                app:layout_constraintTop_toBottomOf="@id/btn4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
            <Button
                android:id="@+id/btn6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/educshape"
                android:text="Main I"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:paddingStart="15dp"
                android:drawableStart="@drawable/batangascity"
                android:drawablePadding="35dp"
                android:gravity="start|center_vertical"
                android:paddingEnd="30dp"
                android:drawableEnd="@drawable/round_arrow_forward_24"
                app:layout_constraintTop_toBottomOf="@id/btn5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
            <Button
                android:id="@+id/btn7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/educshape"
                android:text="Main II"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:paddingStart="15dp"
                android:drawableStart="@drawable/batangascity"
                android:drawablePadding="35dp"
                android:gravity="start|center_vertical"
                android:paddingEnd="30dp"
                android:drawableEnd="@drawable/round_arrow_forward_24"
                app:layout_constraintTop_toBottomOf="@id/btn6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
            <Button
                android:id="@+id/btn8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/educshape"
                android:text="Malvar"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:paddingStart="15dp"
                android:drawableStart="@drawable/malvar"
                android:drawablePadding="35dp"
                android:gravity="start|center_vertical"
                android:paddingEnd="30dp"
                android:drawableEnd="@drawable/round_arrow_forward_24"
                app:layout_constraintTop_toBottomOf="@id/btn7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/educshape"
                android:text="Nasugbu"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:paddingStart="15dp"
                android:drawableStart="@drawable/nasugbu"
                android:drawablePadding="35dp"
                android:gravity="start|center_vertical"
                android:paddingEnd="30dp"
                android:drawableEnd="@drawable/round_arrow_forward_24"
                app:layout_constraintTop_toBottomOf="@id/btn8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <Button
                android:id="@+id/btn10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/educshape"
                android:text="Rosario"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:paddingStart="15dp"
                android:drawableStart="@drawable/rosario"
                android:drawablePadding="35dp"
                android:gravity="start|center_vertical"
                android:paddingEnd="30dp"
                android:drawableEnd="@drawable/round_arrow_forward_24"
                app:layout_constraintTop_toBottomOf="@id/btn9"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />


            <Button
                android:id="@+id/btn11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/educshape"
                android:text="San Juan"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:paddingStart="15dp"
                android:drawableStart="@drawable/sanjuan"
                android:drawablePadding="35dp"
                android:gravity="start|center_vertical"
                android:paddingEnd="30dp"
                android:drawableEnd="@drawable/round_arrow_forward_24"
                app:layout_constraintTop_toBottomOf="@id/btn10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>