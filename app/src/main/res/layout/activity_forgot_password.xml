<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".ForgotPassword">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="415dp"
        android:layout_height="70dp"
        app:cardBackgroundColor="@color/red"
        app:cardCornerRadius="4dp">

        <TextView
            android:id="@+id/civicall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/inter_bold"
            android:text="Forgot Password"
            android:textColor="@color/white"
            android:textSize="25dp" />



    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:text="&quot;Reset Yout Password Here&quot;"
        android:textColor="@color/DarkGray"
        android:textSize="25dp" />


    <ImageView
        android:id="@+id/img"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_below="@+id/welcome"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="26dp"
        android:src="@drawable/forgotimage" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/img"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailforgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="60dp"
            app:hintTextColor="@color/DarkGray">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emailForgot"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/white"
                android:drawableStart="@drawable/baseline_email_24"
                android:drawablePadding="15dp"
                android:hint="Enter Your Email"
                android:lines="1"

                android:inputType="text"
                app:hintTextColor="@color/DarkGray"
                android:paddingRight="42dp"
                android:paddingLeft="20dp"
                android:maxLength="80"
                />

        </com.google.android.material.textfield.TextInputLayout>




    </LinearLayout>
    <ProgressBar
        android:id="@+id/progress_loading"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnsend"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="520dp"
        android:layout_marginRight="30dp"
        android:textAllCaps="false"
        android:background="@drawable/button_shape"
        android:text="Send OTP"
        android:textColor="@color/white"
        android:textSize="25dp">

    </Button>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="505dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/backto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/inter_medium"
            android:text="Back to"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/sigintext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/inter_medium"
            android:text="Sign-In"
            android:textColor="@color/blue"
            android:textSize="15dp" />

    </LinearLayout>







</RelativeLayout>





























