<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisasterResponse.DisasterResponseMenu">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/arrowBackImageView"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:padding="8dp"
            android:src="@drawable/baseline_arrow_back_ios_24"
            />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/lexend_bold"
            android:text="Disaster Response Tips"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/relativeLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/img_46"
                />

            <androidx.cardview.widget.CardView
                android:backgroundTint="@color/white"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp">


                <TextView
                    android:id="@+id/title"
                    android:fontFamily="@font/lexend_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prepare today, survive tomorrow: Disaster response starts with you."
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" />
                <TextView

                    android:id="@+id/info"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome, Spartans! Get ready to unlock the knowledge and skills you need to be a disaster response superstar. From earthquakes to hurricanes, we've got your back!"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    />



            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:backgroundTint="@color/white"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="330dp"
                android:layout_height="70dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp">
                <TextView

                    android:id="@+id/button1"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="match_parent"
                    android:paddingTop="8dp"
                    android:layout_height="wrap_content"
                    android:text="Emergency Preparedness: Plan ahead for safety."
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"

                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    android:paddingLeft="5dp"
                    android:drawableEnd="@drawable/next_24"
                    android:drawablePadding="10dp"
                    />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:paddingTop="9dp"
                android:layout_width="326dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="-6dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp">

                <TextView

                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:drawableEnd="@drawable/next_24"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/lexend_medium"
                    android:gravity="start"
                    android:paddingLeft="5dp"
                    android:text="Natural Disasters: Know the types."
                    android:textAlignment="viewStart"

                    android:textColor="@color/black"
                    android:textSize="13sp" />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:backgroundTint="@color/white"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="-6dp"
                android:paddingTop="4dp"
                android:layout_gravity="center"
                android:layout_width="330dp"
                android:layout_height="60dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp">
                <TextView

                    android:id="@+id/button3"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="First Aid and Basic Life Support:Learn life-saving skills."
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    android:paddingLeft="5dp"

                    android:drawableEnd="@drawable/next_24"
                    android:drawablePadding="10dp"
                    />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:backgroundTint="@color/white"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="-6dp"
                android:layout_gravity="center"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp">
                <TextView

                    android:id="@+id/button4"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shelter and Evacuation Strategies: Find safe shelter."
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    android:paddingLeft="5dp"

                    android:drawableEnd="@drawable/next_24"
                    android:drawablePadding="10dp"
                    />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:backgroundTint="@color/white"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="-6dp"
                android:layout_gravity="center"
                android:layout_width="330dp"
                android:paddingTop="8dp"
                android:layout_height="60dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp">
                <TextView

                    android:id="@+id/button5"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Communication and Information Management: Stay informed."
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    android:paddingLeft="5dp"

                    android:drawableEnd="@drawable/next_24"
                    android:drawablePadding="10dp"
                    />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:backgroundTint="@color/white"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="-6dp"
                android:layout_gravity="center"
                android:layout_width="330dp"
                android:layout_height="60dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp">
                <TextView

                    android:id="@+id/button6"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Community Engagement: Work together."
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    android:paddingLeft="5dp"
                    android:drawableEnd="@drawable/next_24"
                    android:drawablePadding="10dp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:backgroundTint="@color/white"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="-6dp"
                android:layout_gravity="center"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp">
                <TextView

                    android:id="@+id/button7"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Search and Rescue Operations: Find survivors."
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    android:paddingLeft="5dp"
                    android:drawableEnd="@drawable/next_24"
                    android:drawablePadding="10dp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:backgroundTint="@color/white"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="-6dp"
                android:layout_gravity="center"
                android:layout_width="330dp"
                android:layout_height="70dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp">
                <TextView

                    android:id="@+id/button8"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Medical Response and Field Hospitals:Set up field clinics."
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    android:paddingLeft="5dp"
                    android:drawableEnd="@drawable/next_24"
                    android:drawablePadding="10dp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:backgroundTint="@color/white"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="-6dp"
                android:layout_gravity="center"
                android:layout_width="330dp"
                android:paddingTop="8dp"
                android:layout_height="60dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp">
                <TextView

                    android:id="@+id/button9"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Psychosocial Support: Care for emotions."
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    android:paddingLeft="5dp"
                    android:drawableEnd="@drawable/next_24"
                    android:drawablePadding="10dp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:backgroundTint="@color/white"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="-6dp"
                android:layout_gravity="center"
                android:layout_width="330dp"
                android:paddingTop="8dp"
                android:layout_height="60dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp">
                <TextView

                    android:id="@+id/button10"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Technology and Innovation in Disaster Response:Use advanced tools."
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    android:paddingLeft="5dp"
                    android:drawableEnd="@drawable/next_24"
                    android:drawablePadding="10dp"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>