<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountVerification.MainAccountVerification">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/redpink"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/profileburger"
            android:layout_width="60dp"
            android:paddingLeft="5dp"
            android:layout_height="60dp"
            android:layout_gravity="center|left"
            android:background="@android:color/transparent"
            android:src="@drawable/menubutton"
            android:contentDescription="Open Navigation Menu" />


        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/lexend_bold"
            android:text="Account Verification"
            android:textColor="@color/white"
            android:textSize="25dp" />


    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/relativeLayout"
        app:layout_constraintBottom_toBottomOf="parent">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:text="Document Validation"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:fontFamily="@font/lexend_medium" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_height="wrap_content"
        android:text="In order to participate in Civic Engagements programs. The students need to verify their account to be eligible in participating in the said programs. You may submit you student documents Example: COR, Student Id or Certification  of Graduation"
        android:textColor="@color/gray1"
        android:textSize="15sp"
        android:fontFamily="@font/lexend"
        />

        <androidx.cardview.widget.CardView
            android:backgroundTint="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:id="@+id/changepass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/highlight_linear">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/lexend_medium"
                    android:text="Photo ID"
                    android:textColor="@color/DarkGray"
                    android:textSize="21sp"
                    android:drawableRight="@drawable/next_24" />


            </LinearLayout>



        </androidx.cardview.widget.CardView>




        <androidx.cardview.widget.CardView
            android:backgroundTint="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:id="@+id/changepass1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/highlight_linear">

                <TextView
                    android:id="@+id/title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/lexend_medium"
                    android:text="Documents"
                    android:textColor="@color/DarkGray"
                    android:textSize="21sp"
                    android:drawableRight="@drawable/next_24" />


            </LinearLayout>




        </androidx.cardview.widget.CardView>


        <LinearLayout
            
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:id="@+id/Document1"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="Instruction"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:fontFamily="@font/lexend_medium"/>
            
            
            <TextView
                android:text="1. The file must be submitted in the format JPG,PNG  or PDF and the file size is limited to 5mb"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/lexend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:text="2. Take a Picture of the required document (No Scanned Documents) "
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/lexend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="10dp"/>


            <TextView
                android:text="3. Select the type of the document that you are submitting   "
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/lexend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="10dp"/>



            <TextView
                android:text="4. Warning: Submitting fake or altered documents will result in account suspension     "
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/lexend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="10dp"/>


        </LinearLayout>
    </LinearLayout>


    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>