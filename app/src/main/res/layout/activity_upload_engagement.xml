<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CivicEngagementPost.Upload_engagement">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        app:cardBackgroundColor="@color/red"
        app:cardCornerRadius="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Home Icon"
                android:padding="6dp"
                android:src="@drawable/baseline_arrow_circle_left_24"
                android:clickable="true"
                android:focusable="true"
                android:onClick="BackClick" />

            <TextView
                android:id="@+id/civicall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/inter_bold"
                android:text="CIVIC POSTING"
                android:textColor="@color/white"
                android:textSize="23dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1210dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/border_design">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Data"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textColor="@color/red"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                >

                <ImageView
                    android:id="@+id/uploadImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/jherimyimage"
                    android:scaleType="fitXY"/>

            </androidx.cardview.widget.CardView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadTitle"
                android:background="@drawable/border_design"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Enter the Title"
                android:gravity="start|center_vertical"
                android:textColor="@color/red"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadIntro"
                android:background="@drawable/border_design"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Enter the Introduction"
                android:gravity="start|center_vertical"
                android:textColor="@color/red"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/uploadDesc"
                android:background="@drawable/border_design"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Enter a Description"
                android:gravity="start|top"
                android:textColor="@color/red"/>
            <TextView
                android:id="@+id/campustext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Campus"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/inter_medium"
                android:drawablePadding="10dp"
                android:textSize="20dp"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="4dp">

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Program"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/inter_medium"
                android:drawablePadding="10dp"
                android:textSize="20dp"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="4dp">

                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp">

                <EditText
                    android:id="@+id/birthdate"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:paddingEnd="15dp"
                    android:layout_marginTop="20dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/button_shape"
                    android:backgroundTint="@color/white"
                    android:cursorVisible="false"
                    android:drawableEnd="@drawable/calendarred"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:paddingLeft="10dp"
                    android:inputType="date"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp">

                <EditText
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:paddingEnd="15dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_shape"
                    android:backgroundTint="@color/white"
                    android:cursorVisible="false"
                    android:drawableEnd="@drawable/addlocation"
                    android:ems="10"
                    android:paddingBottom="15dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:paddingLeft="10dp"
                    android:inputType="date"/>
            </androidx.cardview.widget.CardView>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/newred"
                android:text="Save"
                android:textColor="@color/white"
                android:id="@+id/saveButton"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                app:cornerRadius = "20dp"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>