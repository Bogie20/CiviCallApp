<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context=".Feedback">


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="@color/redpink"
        app:cardCornerRadius="4dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/profileburger"
                android:layout_width="wrap_content"
                android:paddingLeft="13dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:background="@android:color/transparent"
                android:src="@drawable/menubutton"
                android:contentDescription="Open Navigation Menu" />


            <TextView
                android:id="@+id/feed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/oleo_script"
                android:text="Give Feedback"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:layout_gravity="center_vertical"/>


        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/feed1"


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lexend_medium"
        android:text="How did we do?"
        android:textColor="@color/black"
        android:textSize="20dp" />




    <TextView
        android:id="@+id/userNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lexend_medium"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal" />


    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/feed1"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:progressBackgroundTint="#858687"
        android:progressTint="#FFC107" />






    <TextView
        android:fontFamily="@font/lexend_medium"
        android:id="@+id/editTextText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        />




    <TextView
        android:id="@+id/editTextText"
        android:fontFamily="@font/lexend_medium"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="29dp"
        android:textSize="15dp"
        android:text="Do you have any concern?"
        android:textColor="@color/black"
        />

    <LinearLayout
        android:id="@+id/buttonLine"
        android:layout_below="@id/editTextText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <!-- First TextView -->
            <TextView
                android:id="@+id/TreePlanting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="15sp"
                android:background="@drawable/selected_background"
                android:fontFamily="@font/dmsans_regular"
                android:gravity="center"
                android:padding="10sp"
                android:paddingTop="15sp"
                android:paddingBottom="15sp"
                android:text="Tree Planting"
                android:textColor="@color/redpink"
                android:textSize="14sp"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true" />
            </LinearLayout>
            <!-- Second TextView -->
            <TextView
                android:id="@+id/FundRaising"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1sp"
                android:layout_marginBottom="15sp"
                android:background="@drawable/selected_background"
                android:fontFamily="@font/dmsans_regular"
                android:gravity="center"
                android:padding="10sp"
                android:paddingTop="15sp"
                android:paddingBottom="15sp"
                android:text="Fund Raising"
                android:textColor="@color/redpink"
                android:textSize="14sp"
                android:clickable="true" />

            <TextView
                android:id="@+id/Donations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="15sp"
                android:background="@drawable/selected_background"
                android:fontFamily="@font/dmsans_regular"
                android:gravity="center"
                android:padding="10sp"
                android:paddingTop="15sp"
                android:paddingBottom="15sp"
                android:text="Donations"
                android:textColor="@color/redpink"
                android:textSize="14sp"
                android:clickable="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- First TextView -->
            <TextView
                android:id="@+id/TreePlanting1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="15sp"
                android:background="@drawable/selected_background"
                android:fontFamily="@font/dmsans_regular"
                android:gravity="center"
                android:padding="10sp"
                android:clickable="true"
                android:paddingTop="15sp"
                android:paddingBottom="15sp"
                android:text="Tree Planting"
                android:textColor="@color/redpink"
                android:textSize="14sp" />

            <!-- Second TextView -->
            <TextView
                android:id="@+id/FundRaising2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1sp"
                android:layout_marginBottom="15sp"
                android:background="@drawable/selected_background"
                android:fontFamily="@font/dmsans_regular"
                android:gravity="center"
                android:padding="10sp"
                android:clickable="true"
                android:paddingTop="15sp"
                android:paddingBottom="15sp"
                android:text="Fund Raising"
                android:textColor="@color/redpink"
                android:textSize="14sp" />

            <!-- Third TextView -->
            <TextView
                android:id="@+id/Donations3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="15sp"
                android:background="@drawable/selected_background"
                android:fontFamily="@font/dmsans_regular"
                android:gravity="center"
                android:padding="10sp"
                android:clickable="true"
                android:paddingTop="15sp"
                android:paddingBottom="15sp"
                android:text="Donations"
                android:textColor="@color/redpink"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:fontFamily="@font/lexend_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonLine"
        android:layout_marginStart="25dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/edit_text_background"
        android:textColorHint="@color/instruction"
        android:ems="10"
        android:gravity="start|top"
        android:textSize="15dp"
        android:hint="Other Suggestion here"
        android:inputType="textMultiLine"
        android:lines="6"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"/>


    <Button
        android:id="@+id/publishbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="600dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/inter_bold"
        android:text="Publish feedback"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20dp" />




</RelativeLayout>
