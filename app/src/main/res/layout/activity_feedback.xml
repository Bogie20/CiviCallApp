<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context=".Feedback">


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="@color/redpink"
        app:cardCornerRadius="4dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/backbtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginVertical="8dp"
                android:contentDescription="Back to Previous"
                android:src="@drawable/backbtn"
                android:background="@drawable/highlight_text"
                android:clickable="true"
                android:focusable="true"
                android:onClick="BackClick" />


            <TextView
                android:id="@+id/feed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:fontFamily="@font/oleo_script"
                android:text="Give Feedback"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:layout_gravity="center_vertical"/>


        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/feed1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lexend_medium"
        android:text="How did we do?"
        android:textColor="@color/black"
        android:textSize="20dp" />




    <TextView
        android:id="@+id/userNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lexend_medium"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal" />


    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/feed1"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:progressBackgroundTint="#858687"
        android:progressTint="#FFC107" />






    <TextView
        android:fontFamily="@font/lexend_medium"
        android:id="@+id/editTextText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        />




    <TextView
        android:layout_marginBottom="20dp"
        android:id="@+id/editTextText"
        android:fontFamily="@font/lexend_medium"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="29dp"
        android:textSize="15dp"
        android:text="Do you have any concern?"
        android:textColor="@color/black"
        />

    <LinearLayout
        android:id="@+id/buttonLine"
        android:layout_below="@id/editTextText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="15sp"
            android:background="@drawable/skip_button"
            android:fontFamily="@font/dmsans_regular"
            android:gravity="center"
            android:padding="10sp"
            android:paddingTop="15sp"
            android:paddingBottom="15sp"
            android:text="None so far"
            android:textColor="@color/redpink"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true" />
            <!-- First TextView -->
            <TextView
                android:id="@+id/thank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="15sp"
                android:background="@drawable/skip_button"
                android:fontFamily="@font/dmsans_regular"
                android:gravity="center"
                android:padding="10sp"
                android:paddingTop="15sp"
                android:paddingBottom="15sp"
                android:text="Thank you for asking"
                android:textColor="@color/redpink"
                android:textSize="14sp"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true" />
        <TextView
            android:id="@+id/fix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="15sp"
            android:background="@drawable/skip_button"
            android:fontFamily="@font/dmsans_regular"
            android:gravity="center"
            android:padding="10sp"
            android:paddingTop="15sp"
            android:paddingBottom="15sp"
            android:text="Fix bug"
            android:textColor="@color/redpink"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true" />
            </LinearLayout>
            <!-- Second TextView -->


    <LinearLayout
        android:id="@+id/lolo"
        android:layout_below="@id/buttonLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/very"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="15sp"
            android:background="@drawable/skip_button"
            android:fontFamily="@font/dmsans_regular"
            android:gravity="center"
            android:padding="10sp"
            android:paddingTop="15sp"
            android:paddingBottom="15sp"
            android:text="The App is Very Functional"
            android:textColor="@color/redpink"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true" />
        <TextView
            android:id="@+id/error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="15sp"
            android:background="@drawable/skip_button"
            android:fontFamily="@font/dmsans_regular"
            android:gravity="center"
            android:padding="10sp"
            android:paddingTop="15sp"
            android:paddingBottom="15sp"
            android:text="Fix Error"
            android:textColor="@color/redpink"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true" />
        <!-- First TextView -->

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lolo1"
        android:layout_below="@id/lolo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:fontFamily="@font/lexend_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lolo1"
        android:layout_marginStart="25dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/edit_text_background"
        android:textColorHint="@color/instruction"
        android:ems="10"
        android:gravity="start|top"
        android:textSize="15dp"
        android:hint="Other Suggestion here"
        android:inputType="textMultiLine"
        android:lines="6"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"/>


    <Button
        android:id="@+id/publishbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="600dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/inter_bold"
        android:text="Publish feedback"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20dp" />




</RelativeLayout>
