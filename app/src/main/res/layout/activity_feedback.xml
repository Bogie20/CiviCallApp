<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Feedback">


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="@color/redpink">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/backbtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginVertical="8dp"
                android:contentDescription="Back to Previous"
                android:src="@drawable/backbtn"
                android:background="@drawable/highlight_text"
                android:clickable="true"
                android:focusable="true"
                android:onClick="BackClick" />


            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/oleo_script"
                android:text="GIVE FEEDBACK"
                android:textColor="@color/white"
                android:gravity="center"
                android:paddingEnd="40dp"
                android:textAllCaps="true"
                android:textSize="20dp" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card">

    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >
    <TextView
        android:id="@+id/feed1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lexend_medium"
        android:text="How did we do?"
        android:textColor="@color/black"
        android:textSize="20dp" />



    <RatingBar
            android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/feed1"
android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:progressBackgroundTint="#858687"
        android:progressTint="#FFC107" />
    <TextView
        android:fontFamily="@font/lexend_medium"
        android:id="@+id/editTextText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="..."
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textColor="@color/black"
        />




    <TextView
        android:layout_marginBottom="20dp"
        android:id="@+id/editTextText"
        android:fontFamily="@font/lexend_medium"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="15dp"
        android:text="Do you have any concern?"
        android:textColor="@color/black"
        />

    <LinearLayout
        android:id="@+id/buttonLine"
        android:layout_below="@id/editTextText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="3sp"
            android:layout_marginBottom="15sp"
            android:background="@drawable/skip_button"
            android:fontFamily="@font/dmsans_regular"
            android:gravity="center"
            android:padding="10sp"
            android:paddingTop="15sp"
            android:paddingBottom="15sp"
            android:text="None so far"
            android:textColor="@color/redpink"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true" />
            <!-- First TextView -->
            <TextView
                android:id="@+id/thank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3sp"
                android:layout_marginEnd="3sp"
                android:layout_marginBottom="15sp"
                android:background="@drawable/skip_button"
                android:fontFamily="@font/dmsans_regular"
                android:gravity="center"
                android:padding="10sp"
                android:paddingTop="15sp"
                android:paddingBottom="15sp"
                android:text="Thank you for asking"
                android:textColor="@color/redpink"
                android:textSize="14sp"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true" />
        <TextView
            android:id="@+id/fix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="15sp"
            android:background="@drawable/skip_button"
            android:fontFamily="@font/dmsans_regular"
            android:gravity="center"
            android:padding="10sp"
            android:paddingTop="15sp"
            android:paddingBottom="15sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Improvement"
            android:textColor="@color/redpink"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true" />
            </LinearLayout>
            <!-- Second TextView -->


    <LinearLayout
        android:id="@+id/lolo"
        android:layout_below="@id/buttonLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/very"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="3sp"
            android:layout_marginBottom="15sp"
            android:background="@drawable/skip_button"
            android:fontFamily="@font/dmsans_regular"
            android:gravity="center"
            android:padding="10sp"
            android:paddingTop="15sp"
            android:paddingBottom="15sp"
            android:text="The App is Very Functional"
            android:textColor="@color/redpink"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true" />
        <TextView
            android:id="@+id/error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="3sp"
            android:layout_marginBottom="15sp"
            android:background="@drawable/skip_button"
            android:fontFamily="@font/dmsans_regular"
            android:gravity="center"
            android:padding="10sp"
            android:paddingTop="15sp"
            android:paddingBottom="15sp"
            android:text="Suggestion"
            android:textColor="@color/redpink"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true" />
        <!-- First TextView -->

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lolo1"
        android:layout_below="@id/lolo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lolo1"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:fontFamily="@font/lexend_medium"
        android:gravity="start|top"
        android:hint="Enter Here"
        android:inputType="textMultiLine"
        android:lines="6"
        android:padding="15dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textColorHint="@color/instruction"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/belowText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextTextMultiLine"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/lexend_medium"
        android:text="*You can provide feedback once a week"
        android:textColor="@color/instruction"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/belowtxt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/belowText"
        android:layout_marginLeft="30dp"
        android:fontFamily="@font/lexend_medium"
        android:text="*Maximum Input is 200 characters only"
        android:textColor="@color/instruction"
        android:textSize="15dp" />
    <Button
        android:id="@+id/publishbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/belowText"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/inter_bold"
        android:text="Publish feedback"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20dp" />
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
