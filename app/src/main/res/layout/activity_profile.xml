<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Profile.Profile">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants"
                android:layout_marginBottom="32dp">

                <androidx.constraintlayout.widget.ConstraintLayout

                    app:cardCornerRadius="80dp"
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:background="@drawable/kurt1"
                    app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                   >

                    <ImageView
                        android:id="@+id/profileImage"
                        android:layout_width="122dp"
                        android:layout_height="122dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/profilenone"
                        android:layout_marginTop="35dp"
                        app:layout_constraintBottom_toTopOf="@+id/fullname2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/fullname2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteY="165dp">

                        <TextView
                            android:id="@+id/FirstName1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_bold"
                            android:gravity="center"
                            android:text="Jherimy"
                            android:layout_marginTop="0dp"
                            android:textColor="@color/white"
                            android:textSize="25sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/LastName2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"


                            android:fontFamily="@font/inter_bold"
                            android:text="mallorca"
                            android:textColor="@color/white"
                            android:textSize="25sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/FirstName1"
                            app:layout_constraintTop_toTopOf="parent" />
                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingTop="12dp"
                android:paddingEnd="6dp"
                android:translationZ="100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/back_arrow" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/app_name"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Profile"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:translationZ="100dp"
                app:layout_constraintStart_toEndOf="@id/arrow"
                app:layout_constraintTop_toTopOf="@id/arrow" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/Email2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_56"
                android:paddingLeft="20dp"
                android:gravity="center"
                android:textSize="22sp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card"
                android:text="Email Address Here" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/myButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/Email2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="13dp"
                android:background="@drawable/button_profile" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/totaleng"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:text="0"
                android:textSize="30sp"
                android:layout_marginLeft="45dp"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Email2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/activepts"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_marginLeft="-80dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/totaleng"
                app:layout_constraintTop_toTopOf="@id/totaleng"
                android:text="0.0" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/pending"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_marginRight="-55dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/activepts"
                app:layout_constraintTop_toTopOf="@id/activepts"
                android:text="0" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/totaleng_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_56"
                android:paddingLeft="8dp"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/totaleng"
                android:text="Total Engagement" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/activepts_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active Points"
                android:textSize="15sp"
                android:layout_marginLeft="-80dp"
                android:textColor="@color/white_56"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/totaleng"
                app:layout_constraintTop_toBottomOf="@id/activepts" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/pending_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active Points"
                android:textSize="15sp"
                android:layout_marginRight="-55dp"
                android:textColor="@color/white_56"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/activepts"
                app:layout_constraintTop_toBottomOf="@id/pending" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/stats_title"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Account Info"
                android:textColor="@color/white_93"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/totaleng" />
   <LinearLayout
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/stats_title"
       android:id="@+id/gender"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
            <TextView
                android:id="@+id/hp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="6dp"
                android:text="Gender:"
                android:textSize="20sp"
                android:textColor="@color/white_70"
                android:textStyle="bold"
                 />
       <TextView
           android:layout_marginTop="6dp"
           android:id="@+id/usergender"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Male"
           android:textSize="20dp"
           android:fontFamily="@font/inter_medium"
           android:textColor="@color/white"
           android:layout_marginLeft="10dp"
           android:layout_marginStart="10dp"
           android:layout_marginEnd="10dp"
           android:paddingLeft="10dp"



           />


   </LinearLayout>

                <LinearLayout
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/gender"
                    android:id="@+id/address"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >
            <TextView
                android:id="@+id/attack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="15dp"
                android:text="Campus"
                android:textSize="20sp"
                android:textColor="@color/white_70"
                android:textStyle="bold"
                />
                    <TextView
                        android:id="@+id/useradress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="15dp"
                        android:text="Sample Address"
                        android:textSize="20sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"

                        android:textColor="@color/white"
                        android:textStyle="bold"
                        />




                </LinearLayout>
                <LinearLayout
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/address"
                    android:id="@+id/birthdate"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >

            <TextView
                android:id="@+id/defense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="15dp"
                android:text="Date of Birth:"
                android:textSize="20sp"
                android:textColor="@color/white_70"
                android:textStyle="bold"
                 />

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:id="@+id/userbday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="15dp"
                        android:text="Date of Birth:"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/birthdate"
                    android:id="@+id/contact"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >
            <TextView
                android:id="@+id/speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="15dp"
                android:text="Contact No:"
                android:textSize="20sp"
                android:textColor="@color/white_70"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/birthdate" />

                    <TextView
                        android:id="@+id/usercontact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="15dp"
                        android:text="Contact "
                        android:textSize="20sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/contact"
                    android:id="@+id/campus"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >
            <TextView
                android:id="@+id/exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="15dp"
                android:text="Emergency No."
                android:textSize="20sp"
                android:textColor="@color/white_70"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/contact" />
                    <TextView
                        android:id="@+id/useremergencyno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="15dp"
                        android:text="Contact "
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        />
                </LinearLayout>

                <LinearLayout
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/campus"
                    android:id="@+id/campus2"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >
            <TextView
                android:id="@+id/department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="15dp"
                android:text="Address:"
                android:textSize="20sp"
                android:textColor="@color/white_70"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/campus"
                android:layout_marginBottom="400dp"/>

                    <TextView
                        android:id="@+id/useraddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="15dp"
                        android:text="sample Address "
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        />
                </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
