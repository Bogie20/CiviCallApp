<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_gravity="center"
    android:gravity="center"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/redpink" >
        </View>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:fontFamily="@font/lexend"
            android:gravity="center"
            android:padding="10sp"
            android:text="Search Filter"
            android:textColor="@color/redpink"
            android:textSize="15sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="left"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10sp"
                android:fontFamily="@font/dmsans_medium"

                android:padding="10sp"
                android:text="Campus Category:"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="normal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- First TextView -->
            <TextView
                android:id="@+id/Nasugbu"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="15sp"
                android:background="@drawable/skip_button"
                android:fontFamily="@font/dmsans_regular"
                android:gravity="center"
                android:padding="10sp"
                android:paddingVertical="15sp"
                android:text="ARASOF Nasugbu Campus"
                android:textColor="@color/redpink"
                android:textSize="14sp" />

            <!-- Second TextView -->
            <TextView
                android:id="@+id/Balayan"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginBottom="15sp"
                android:background="@drawable/skip_button"
                android:fontFamily="@font/dmsans_regular"
                android:gravity="center"
                android:padding="10sp"
                android:paddingVertical="15sp"
                android:text="Balayan Campus"
                android:textColor="@color/redpink"
                android:textSize="14sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Malvar"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="10sp"
                android:layout_marginBottom="15sp"
                android:background="@drawable/skip_button"
                android:fontFamily="@font/dmsans_regular"
                android:gravity="center"
                android:padding="10sp"
                android:paddingVertical="15sp"
                android:text="JPLPC Malvar Campus"
                android:textColor="@color/redpink"
                android:textSize="14sp" />
            <!-- Second TextView -->
            <TextView
                android:id="@+id/Lemery"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="15sp"
                android:background="@drawable/skip_button"
                android:fontFamily="@font/dmsans_regular"
                android:gravity="center"
                android:padding="10sp"
                android:paddingVertical="15sp"
                android:text="Lemery Campus"
                android:textColor="@color/redpink"
                android:textSize="14sp" />
     =

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Lobo"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="10sp"
                android:layout_marginBottom="15sp"
                android:background="@drawable/skip_button"
                android:fontFamily="@font/dmsans_regular"
                android:gravity="center"
                android:padding="10sp"
                android:paddingVertical="15sp"
                android:text="Lobo Campus"
                android:textColor="@color/redpink"
                android:textSize="13sp" />
            <!-- Second TextView -->
            <TextView
                android:id="@+id/Mabini"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="5sp"
                android:layout_marginBottom="15sp"
                android:background="@drawable/skip_button"
                android:fontFamily="@font/dmsans_regular"
                android:gravity="center"
                android:padding="10sp"
                android:paddingVertical="15sp"
                android:text="Mabini Campus"
                android:textColor="@color/redpink"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/Rosario"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="20sp"
                android:background="@drawable/skip_button"
                android:fontFamily="@font/dmsans_regular"
                android:gravity="center"
                android:padding="10sp"
                android:paddingVertical="15sp"
                android:text="Rosario Campus"
                android:textColor="@color/redpink"
                android:textSize="13sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/PabloI"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="5sp"
                android:layout_marginBottom="15sp"
                android:background="@drawable/skip_button"
                android:fontFamily="@font/dmsans_regular"
                android:gravity="center"
                android:padding="10sp"
                android:paddingVertical="15sp"
                android:maxLines="1"
                android:text="Pablo Borbon Campus I"
                android:textColor="@color/redpink"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/PabloII"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="20sp"
                android:background="@drawable/skip_button"
                android:fontFamily="@font/dmsans_regular"
                android:gravity="center"
                android:padding="10sp"
                android:paddingVertical="15sp"
                android:text="Pablo Borbon Campus II"
                android:textColor="@color/redpink"
                android:textSize="13sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <!-- Second TextView -->
            <TextView
                android:id="@+id/SanJuan"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="10sp"
                android:layout_marginBottom="15sp"
                android:background="@drawable/skip_button"
                android:fontFamily="@font/dmsans_regular"
                android:gravity="center"
                android:padding="10sp"
                android:paddingVertical="15sp"
                android:text="San Juan Campus"
                android:textColor="@color/redpink"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/Lipa"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="5sp"
                android:layout_marginBottom="15sp"
                android:background="@drawable/skip_button"
                android:fontFamily="@font/dmsans_regular"
                android:gravity="center"
                android:padding="10sp"
                android:paddingVertical="15sp"
                android:maxLines="1"
                android:text="Lipa Campus"
                android:textColor="@color/redpink"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/All"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="15sp"
                android:background="@drawable/skip_button"
                android:fontFamily="@font/dmsans_regular"
                android:gravity="center"
                android:padding="10sp"
                android:paddingVertical="15dp"
                android:text="All Campus"
                android:textColor="@color/redpink"
                android:textSize="14sp" />


        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>